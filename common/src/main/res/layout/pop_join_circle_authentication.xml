<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_whit12_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.85">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:src="@mipmap/ic_join_check_tips"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="温馨提示"
                android:gravity="center"
                android:textColor="@color/color_16"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_tips" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/color_9916"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tips"
                tools:text="只有探险者、新蒙迪欧车主才能加圈，请认证车主" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_sm_tips"
                android:layout_width="0dp"
                android:textSize="10sp"
                android:textColor="@color/color_00095b"
                android:layout_marginTop="15dp"
                android:gravity="center"
                tools:text="可进入“我的-福币”查看福币规则。"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tv_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_content"
                app:layout_constraintRight_toRightOf="@+id/tv_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_au"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="认证车主"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_goneMarginTop="24dp"
                android:background="@drawable/bg_1700f4_18"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sm_tips" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_no_au"
                android:layout_width="wrap_content"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_au"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16sp"
                android:textColor="@color/color_1700F4"
                app:layout_constraintRight_toRightOf="parent"
                android:text="暂不认证"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_no_au"
                android:layout_height="1dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>