<?xml version="1.0" encoding="utf-8"?>
<layout >

    <data>

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:orientation="vertical">

        <View
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbarheight"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bar_img_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:scaleType="center"
                android:src="@mipmap/back_xhdpi" />
            <ImageView
                android:id="@+id/bar_img_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/bar_img_back"
                android:layout_marginLeft="5dp"
                tools:visibility="visible"
                android:visibility="gone"
                android:scaleType="center"
                android:src="@mipmap/icon_close_black" />

            <TextView
                android:id="@+id/bar_tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/bar_img_back"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:visibility="invisible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/bar_tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="清空"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                tools:visibility="visible"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_ignition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/bar_tv_other"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                tools:visibility="visible"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/bar_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/bar_img_more"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                tools:visibility="visible"
                android:src="@mipmap/shareicon" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/alertdialog_line" />
    </LinearLayout>
</layout>