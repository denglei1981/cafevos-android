<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_081700f4_12"
        android:paddingBottom="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_fans_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/fordicon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circleImageStyle" />

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/item_fans_icon"
            app:layout_constraintCircle="@id/item_fans_icon"
            app:layout_constraintCircleAngle="140"
            app:layout_constraintCircleRadius="15dp"
            app:layout_constraintEnd_toEndOf="@+id/item_fans_icon" />

        <TextView
            android:id="@+id/item_fans_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:enabled="true"
            android:maxLines="1"
            android:textColor="@color/color_16"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_sub_title"
            app:layout_constraintLeft_toRightOf="@+id/item_fans_icon"
            app:layout_constraintRight_toLeftOf="@+id/item_text"
            app:layout_constraintTop_toTopOf="@+id/item_fans_icon"
            tools:text="德玛西亚" />

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_8016"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/item_fans_icon"
            app:layout_constraintStart_toStartOf="@+id/item_fans_name"
            app:layout_constraintTop_toBottomOf="@+id/item_fans_name"
            tools:ignore="SmallSp"
            tools:text="车迷级公民"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="关注"
            android:textColor="#B0B3B5"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_fans_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_fans_icon" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>