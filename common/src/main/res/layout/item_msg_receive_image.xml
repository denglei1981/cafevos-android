<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/msg_time_bg"
        android:padding="2dp"
        android:text="2020.10.13 17:12"
        android:textColor="#666666"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/msg_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:text="NickName"
        android:textColor="#1F2226"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/msg_head_icon"
        app:layout_constraintTop_toTopOf="@+id/msg_head_icon" />


    <ImageView
        android:id="@+id/msg_head_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_time"
        app:layout_goneMarginTop="12dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        app:layout_constraintLeft_toLeftOf="@+id/msg_nickName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_nickName">

        <ImageView
            android:id="@+id/msg_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:minWidth="120dp"
            android:minHeight="120dp"
            android:scaleType="fitStart"
            android:src="@mipmap/ic_def_square_img" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>