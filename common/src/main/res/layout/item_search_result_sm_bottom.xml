<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_item_sm_views"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_8016"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SmallSp"
            tools:text="2.2万" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:drawableStart="@mipmap/ic_item_sm_good"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_8016"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_views"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SmallSp"
            tools:text="2.2万" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:drawableStart="@mipmap/ic_item_sm_comment"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_8016"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_goods"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SmallSp"
            tools:text="2.2万" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>