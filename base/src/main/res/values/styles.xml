<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--TextView-->
    <style name="commonTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="commonTextView.Bold" parent="commonTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#0F1524</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commonTextView.Medium" parent="commonTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#0F1524</item>
    </style>

    <style name="commonTextView.Medium.Black" parent="commonTextView.Medium">
        <item name="android:textColor">#0A0A0C</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="commonTextView.Medium.White" parent="commonTextView.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="commonTextView.Normal" parent="commonTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0F1524</item>
    </style>
    <style name="commonTextView.Normal.Bold" parent="commonTextView.Normal">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="commonTextView.Normal.Black" parent="commonTextView.Normal">
        <item name="android:textColor">#0A0A0C</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="commonTextView.Normal.White" parent="commonTextView.Normal">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="commonTextView.Small" parent="commonTextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="commonTextView.Small.Light" parent="commonTextView.Small">
        <item name="android:textColor">#999999</item>
    </style>

    <style name="commonTextView.Small.LightBlue" parent="commonTextView.Small">
        <item name="android:textColor">#74889D</item>
    </style>
    <style name="commonTextView.Small.LightBlack" parent="commonTextView.Small">
        <item name="android:textColor">#01025C</item>
    </style>

    <style name="commonTextView.Small.Black" parent="commonTextView.Small">
        <item name="android:textColor">#0A0A0C</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="commonTextView.Small.Black.Bold" parent="commonTextView.Small.Black">
        <item name="android:textStyle">bold</item>
    </style>


    <!--Button-->
    <style name="commonButton">
        <item name="android:background">@drawable/bg_bt_blue_corner39</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="commonButton.Margin10" parent="commonButton">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--ShapableImageView-->
    <style name="shapeableRound">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>