    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/color_F4">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/mapView"
            class="com.changanford.car.ui.fragment.NewCarFragmentNoCar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_154"
            android:layout_margin="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_store_ic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="347:196"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/shapeCircleTop" />

        <View
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_28"
            android:background="@drawable/shape_white_24dp"
            android:gravity="center"
            android:minHeight="@dimen/dp_40"
            android:text="@string/str_orderImmediately"
            android:textColor="@color/color_1700f4"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/dr_indicator"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layout_location0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <com.changanford.common.ui.view.WTextView
                style="@style/w_style_txt_ellipsize"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/shape_whit15_bg"
                android:gravity="center"
                android:maxWidth="@dimen/dp_120"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:text="@string/str_currentPosition"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@mipmap/ic_car_location_green" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_location1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <com.changanford.common.ui.view.WTextView
                android:id="@+id/tv_locationTitle"
                style="@style/w_style_txt_ellipsize"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/shape_whit15_bg"
                android:gravity="center"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:text="@string/str_currentPosition"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/img_locationIc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@mipmap/ic_car_location" />
        </LinearLayout>

