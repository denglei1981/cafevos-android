<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/color_F4">
        <com.zhpan.bannerview.BannerViewPager
            android:id="@+id/carTopViewPager"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />
        <com.zhpan.bannerview.indicator.DrawableIndicator
            android:id="@+id/dr_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/carTopViewPager" />
        <androidx.appcompat.widget.AppCompatButton
            android:visibility="gone"
            android:id="@+id/btn_submit"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginEnd="@dimen/dp_28"
            app:layout_constraintTop_toBottomOf="@id/dr_indicator"
            android:background="@drawable/shape_white_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_orderImmediately"
            android:textColor="@color/color_00095B"
            android:gravity="center"
            android:minHeight="@dimen/dp_40"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>