<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.changanford.common.ui.AutoScaleWidthImageView
            android:id="@+id/imageCarIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@mipmap/ic_def_square_img" />

        <com.changanford.common.ui.AutoScaleWidthImageView
            android:id="@+id/img_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/imageCarIntro" />

        <com.changanford.common.ui.AutoScaleWidthImageView
            android:id="@+id/img_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imageCarIntro" />

        <LinearLayout
            android:id="@+id/ll_linear"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/rl_top_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_top_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@mipmap/car_banner_right_ic"
                    android:drawablePadding="4dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="参数配置" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_top_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_top_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:drawableEnd="@mipmap/car_banner_right_ic"
                    android:drawablePadding="4dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="查看更多" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/v_guide_line"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:orientation="horizontal"
            android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/v_guide_line">

            <RelativeLayout
                android:id="@+id/rl_bottom_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/bg_car_l_b">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_bottom_left"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="预约试驾"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bottom_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:background="@drawable/bg_car_r_b">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_bottom_right"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="立即订阅"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>

        <com.dueeeke.videoplayer.player.VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/dp_500"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bottom_tips"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/car_bottom_tips_ic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

