<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.changanford.common.ui.AutoScaleWidthImageView
            android:id="@+id/imageCarIntro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            tools:srcCompat="@mipmap/ic_def_square_img" />

        <com.changanford.common.ui.AutoScaleWidthImageView
            android:id="@+id/img_top"
            app:layout_constraintTop_toTopOf="@id/imageCarIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.changanford.common.ui.AutoScaleWidthImageView
            android:id="@+id/img_bottom"
            app:layout_constraintBottom_toBottomOf="@id/imageCarIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

