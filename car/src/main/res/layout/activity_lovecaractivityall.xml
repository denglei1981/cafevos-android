<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_layout"
        layout="@layout/comm_bar_title_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.zhpan.bannerview.BannerViewPager
        android:id="@+id/carTopViewPager"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="@dimen/dp_280"
        app:layout_constraintTop_toBottomOf="@id/title_layout" />
    <com.zhpan.bannerview.indicator.DrawableIndicator
        android:id="@+id/dr_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carTopViewPager" />
    <View
        android:id="@+id/grayview"
        app:layout_constraintTop_toBottomOf="@id/dr_indicator"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_ee"
        android:layout_height="@dimen/dp_10"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_layout"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/grayview" />

</androidx.constraintlayout.widget.ConstraintLayout>