<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_dealers"
            tools:visibility="visible"
            android:layout_marginTop="@dimen/dp_28"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">
            <com.changanford.common.ui.view.WTextView
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:gravity="center_vertical"
                android:drawableEnd="@mipmap/right_black"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tv_dealers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="附近经销商"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_17"/>
            <com.baidu.mapapi.map.MapView
                android:layout_margin="@dimen/dp_5"
                app:layout_constraintTop_toTopOf="@id/view_mapBg"
                app:layout_constraintBottom_toBottomOf="@id/view_mapBg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_154"
                android:id="@+id/mapView" />
            <View
                android:id="@+id/view_mapBg"
                android:layout_marginTop="@dimen/dp_17"
                android:background="@drawable/shape_40black_5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_dealers"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_164" />
            <com.changanford.common.ui.view.WTextView
                android:id="@+id/tv_location"
                app:layout_constraintTop_toTopOf="@id/view_mapBg"
                app:layout_constraintBottom_toBottomOf="@id/view_mapBg"
                app:layout_constraintStart_toStartOf="@id/view_mapBg"
                app:layout_constraintEnd_toEndOf="@id/view_mapBg"
                android:background="@drawable/shape_whit15_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_28"
                android:textColor="@color/color_00095B"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_5"
                android:drawableStart="@mipmap/ic_location"
                android:text="@string/str_pleaseOnYourMobilePhoneFirst"/>
            <com.changanford.common.ui.view.WTextView
                android:id="@+id/tv_fromYouRecently"
                app:layout_constraintBottom_toBottomOf="@id/mapView"
                app:layout_constraintEnd_toEndOf="@id/mapView"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_7"
                android:background="@drawable/shape_9900142e_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/dp_72"
                android:minHeight="@dimen/dp_25"
                android:gravity="center"
                android:text="@string/str_fromYouRecently"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_13" />
            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/composeView_dealers"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                app:layout_constraintTop_toBottomOf="@id/mapView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>