<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_dealers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_dealers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:gravity="center_vertical"
                android:textColor="@color/color_d916"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="附近经销商" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_deal_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@mipmap/car_ic_deal_right"
                android:drawablePadding="4dp"
                android:text="更多"
                android:textColor="@color/color_9916"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_dealers"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_dealers" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dealers"
                android:background="@drawable/shape_whit12_bg"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mapView"
                    class="com.changanford.car.ui.fragment.NewCarFragmentNoCar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_mapBg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_164"
                    android:background="@drawable/shape_40black_5dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.changanford.common.ui.view.WTextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_whit15_bg"
                    android:drawableStart="@mipmap/ic_location"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:minHeight="@dimen/dp_28"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:text="@string/str_pleaseOnYourMobilePhoneFirst"
                    android:textColor="@color/color_1700f4"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/view_mapBg"
                    app:layout_constraintEnd_toEndOf="@id/view_mapBg"
                    app:layout_constraintStart_toStartOf="@id/view_mapBg"
                    app:layout_constraintTop_toTopOf="@id/view_mapBg" />

                <com.changanford.common.ui.view.WTextView
                    android:id="@+id/tv_fromYouRecently"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_7"
                    android:background="@drawable/shape_9900142e_5dp"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_72"
                    android:minHeight="@dimen/dp_25"
                    android:visibility="gone"
                    android:text="@string/str_fromYouRecently"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_13"
                    app:layout_constraintBottom_toBottomOf="@id/mapView"
                    app:layout_constraintEnd_toEndOf="@id/mapView" />

                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/composeView_dealers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    app:layout_constraintTop_toBottomOf="@id/mapView" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>