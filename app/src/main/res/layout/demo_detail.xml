<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/mymotion"
    app:layoutDescription="@xml/demo_detail_scene">


    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/demo_detailimg"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintTop_toBottomOf="@id/top" />

    <VideoView
        android:id="@+id/video"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintTop_toBottomOf="@id/top" />

    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/demodetailhead"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/demodetailbottom"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="34dp"
        android:src="@mipmap/demoheartred"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/heartgray"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="34dp"
        android:src="@mipmap/demoheart"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/source1"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="36dp"
        android:src="@mipmap/demog1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/source2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:visibility="invisible"

        android:layout_marginRight="30dp"
        android:layout_marginBottom="36dp"
        android:src="@mipmap/demog2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/source3"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:visibility="invisible"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="36dp"
        android:src="@mipmap/demog3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/source4"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="36dp"
        android:visibility="invisible"

        android:src="@mipmap/demog4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/source5"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="30dp"
        android:visibility="invisible"
        android:layout_marginBottom="36dp"
        android:src="@mipmap/demog5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.motion.widget.MotionLayout>