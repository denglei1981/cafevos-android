<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f6"
        android:paddingBottom="15dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/image_mine"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="375:154"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bg" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_user_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_corner10"
            android:padding="@dimen/dp_16"
            app:layout_constraintDimensionRatio="375:214"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/v_line" />

        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_head">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxEms="7"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                tools:text="@string/test_str" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_user_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:background="@drawable/shape_f2c698_24dp"
                android:gravity="center"
                android:minWidth="36dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                tools:text="LV.1" />
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_25"
            android:scaleType="center"
            android:src="@color/color_00095B"
            app:layout_constraintBottom_toTopOf="@+id/con_user_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/con_user_info"
            app:shapeAppearance="@style/circleImageStyle"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_vip"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_head"
            app:layout_constraintEnd_toEndOf="@+id/iv_head"
            app:srcCompat="@mipmap/my_myvicon"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:src="@mipmap/icon_mine_cover"
            app:layout_constraintBottom_toTopOf="@+id/con_user_info"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_edit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/shape_eef1fa_corner10"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="11"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="编辑资料"
            android:textColor="#4E608A"
            android:textSize="@dimen/sp_13"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_head"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/shape_r_8_c_5c_13"
            android:gravity="center"
            android:minWidth="@dimen/dp_50"
            android:minHeight="@dimen/dp_25"
            android:text="关注"
            android:textColor="#01025C"
            android:textSize="@dimen/sp_11"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_head"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_car_name"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@drawable/shape_eef1fa_corner10"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxEms="11"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="#8195C8"
            android:textSize="@dimen/sp_11"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/ll_user_info"
            app:layout_constraintTop_toBottomOf="@+id/ll_user_info"
            tools:text="@string/app_name"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_20"
            android:maxLines="2"
            android:textColor="#ff666666"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_car_name"
            tools:text="哼！你算哪块小饼干～这是个人签名，个性签名~" />

        <LinearLayout
            android:id="@+id/ll_medal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_medal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的勋章"
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_medal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:drawableEnd="@mipmap/icon_mine_person_next"
                android:textColor="@color/color_66"
                android:textSize="14sp"
                tools:text="共3枚" />
        </LinearLayout>


        <com.changanford.common.widget.DrawDoubleHTextView
            android:id="@+id/dd_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            app:descText="关注"
            app:layout_constraintBottom_toBottomOf="@+id/con_user_info"
            app:layout_constraintEnd_toStartOf="@+id/dd_fans"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/con_user_info"
            app:layout_constraintTop_toBottomOf="@+id/ll_medal" />

        <com.changanford.common.widget.DrawDoubleHTextView
            android:id="@+id/dd_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            app:descText="粉丝"
            app:layout_constraintBottom_toBottomOf="@+id/con_user_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/dd_follow"
            app:layout_constraintTop_toBottomOf="@+id/ll_medal" />

        <com.changanford.common.widget.DrawDoubleHTextView
            android:id="@+id/dd_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            app:descText="获赞数"
            app:layout_constraintBottom_toBottomOf="@+id/con_user_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/dd_fans"
            app:layout_constraintTop_toBottomOf="@+id/ll_medal" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>