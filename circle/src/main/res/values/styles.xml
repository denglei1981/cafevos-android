<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomMenuDialog">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_out_anim</item>
    </style>

    <style name="BottomMenuDialogStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/BottomMenuDialog</item>
    </style>

    <!--Dialog主题-->
    <style name="DialogThemeStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_out_anim</item>
        <!--<item name="android:backgroundDimAmount">0.0</item>-->
    </style>

    <style name="StyleCommonDialog" parent="DialogThemeStyle">
        <item name="android:windowSoftInputMode">stateVisible</item>
    </style>

    <style name="VScrollbarStyle">
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb_vertical</item>
        <item name="android:scrollbarTrackVertical">@color/transparent</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    <style name="AppText" />
    <style name="AppText.lineSpace">
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <declare-styleable name="AssNineGridView">
        <attr name="angv_singleImgRatio" format="float" />
        <attr name="angv_gridSpace" format="dimension" />
        <attr name="angv_maxSize" format="integer" />
    </declare-styleable>

    <style name="default_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_f6</item>
    </style>
</resources>