<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="author"
            type="com.changanford.common.bean.AuthorBaseVo" />

        <import type="android.view.View" />

        <variable
            name="postBean"
            type="com.changanford.common.bean.PostDataBean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content"
            style="@style/AppText.lineSpace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            app:layout_goneMarginTop="0dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_9916"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="福克斯 穿越千年的丝绸古道，感叹生命的繁盛与荒无之地的寂静仅一步之遥。" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/tv_content"
            app:layout_goneMarginTop="11dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_one_pic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="center"
                android:visibility="gone"
                app:layout_constraintDimensionRatio="343:167"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/rounded12ImageStyle" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_two_one_pic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="center"
                android:layout_marginEnd="5dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_two_two_pic"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/rounded12ImageStyle"
                tools:background="@color/black" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_two_two_pic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:scaleType="center"
                tools:visibility="visible"
                android:layout_marginStart="5dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/iv_two_one_pic"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/rounded12ImageStyle"
                tools:background="@color/red" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pic_num"
                android:layout_width="46dp"
                android:layout_height="26dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_home_item_video_time"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_two_two_pic"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="+2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/layout_count"
            layout="@layout/layout_answer_count"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_pic" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>