<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="lifeCycleOwner"
            type="androidx.lifecycle.LifecycleOwner" />


        <import type="android.content.Context" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_8016"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10回答 2.5w浏览" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tv_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_hd_bottom"
            app:layout_constraintBottom_toBottomOf="@+id/tv_count"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_count" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_ask_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:drawableStart="@mipmap/question_fb"
            android:drawablePadding="2dp"
            android:textSize="12sp"
            android:textColor="@color/color_c19f68"
            app:layout_constraintBottom_toBottomOf="@+id/tv_count"
            app:layout_constraintRight_toLeftOf="@+id/tv_ask"
            app:layout_constraintTop_toTopOf="@+id/tv_count"
            tools:text="12" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>