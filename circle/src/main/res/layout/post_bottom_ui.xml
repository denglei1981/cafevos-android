<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/typerec"
            android:visibility="visible"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
        <TextView
            android:id="@+id/tv_mok"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/text_color"
            android:textSize="13sp"
            android:background="@drawable/shape_f6f6_bg"
            android:layout_marginBottom="10dp"
            android:text="选择模块>"/>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#fffafbfd"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_bq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签"
            android:textColor="@color/text_color"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginRight="25dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="2dp"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_pic"
            app:layout_constraintEnd_toEndOf="@id/iv_pic"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/labelrec"
            android:visibility="visible"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_bq"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_pic"
            />
        <LinearLayout
            android:id="@+id/iv_pic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_huati"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1.5"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@mipmap/c_pic"
                />
            <TextView
                android:id="@+id/tv_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/iv_pic"
                app:layout_constraintRight_toRightOf="@id/iv_pic"
                app:layout_constraintTop_toTopOf="@id/iv_pic"
                android:text="图片"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textColor="@color/text_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_huati"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@id/iv_pic"
            app:layout_constraintEnd_toStartOf="@id/iv_quanzi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bq"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView

                android:layout_width="wrap_content"
                app:layout_constraintHorizontal_weight="1.5"
                app:layout_constraintStart_toEndOf="@id/iv_pic"
                app:layout_constraintEnd_toStartOf="@id/iv_quanzi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_bq"
                android:layout_height="wrap_content"
                android:src="@mipmap/c_ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/iv_pic"
                app:layout_constraintRight_toRightOf="@id/iv_pic"
                app:layout_constraintTop_toTopOf="@id/iv_pic"
                android:text="话题"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textColor="@color/text_color"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/iv_quanzi"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@id/iv_huati"
            app:layout_constraintEnd_toStartOf="@id/iv_loc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bq"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/c_qz"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/iv_pic"
                app:layout_constraintRight_toRightOf="@id/iv_pic"
                app:layout_constraintTop_toTopOf="@id/iv_pic"
                android:text="圈子"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textColor="@color/text_color"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/iv_loc"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@id/iv_quanzi"
            app:layout_constraintEnd_toStartOf="@id/iv_emoj"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bq"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/c_loc"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/iv_pic"
                app:layout_constraintRight_toRightOf="@id/iv_pic"
                app:layout_constraintTop_toTopOf="@id/iv_pic"
                android:text="定位"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textColor="@color/text_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_emoj"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@id/iv_loc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bq"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/c_bq"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/iv_pic"
                app:layout_constraintRight_toRightOf="@id/iv_pic"
                app:layout_constraintTop_toTopOf="@id/iv_pic"
                android:text="表情"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textColor="@color/text_color"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>