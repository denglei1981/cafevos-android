<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/t_fl"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="20dp"
            android:background="@drawable/shap_f4f4f4"
            app:layout_constraintDimensionRatio="h,335:125"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/iv_addfm"
                android:src="@mipmap/longpostadd"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/ivFm"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/t_fl"
            app:layout_constraintRight_toRightOf="@id/t_fl"
            android:layout_marginTop="-15dp"
            android:layout_marginRight="-15dp"
            android:padding="5dp"
            android:src="@mipmap/longposdle" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tv_tex"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/t_fl"
            android:layout_width="match_parent"
            android:background="@drawable/shap_longposttxtbk"
            android:minHeight="70dp"
            android:paddingLeft="10dp"
            android:gravity="top"
            android:paddingTop="10dp"
            android:textSize="13sp"
            android:layout_margin="20dp"
            android:textColorHint="#CCCCCC"
            android:hint="输入图片描述（最多100字）"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>