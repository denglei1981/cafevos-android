<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_margin="@dimen/dp_20"
        android:layout_width="match_parent"
        app:layout_constraintDimensionRatio ="h,335:150"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_img"
        app:layout_constraintRight_toRightOf="@id/iv_img"
        android:layout_marginTop="-15dp"
        android:layout_marginRight="-15dp"
        android:padding="5dp"
        android:src="@mipmap/longposdle"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tv_tex"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_img"
        android:layout_width="match_parent"
        android:background="@drawable/shap_longposttxtbk"
        android:minHeight="70dp"
        android:paddingTop="12dp"
        android:paddingLeft="10dp"
        android:layout_margin="20dp"
        android:hint="输入图片描述（最多100字）"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>