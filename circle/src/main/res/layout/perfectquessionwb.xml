<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/title"
            layout="@layout/circle_title_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:text="* "
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="15sp" />
            <TextView
                style="@style/commonTextView.Normal"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:text="调查标题"
                android:textStyle="bold"
                android:textColor="@color/textblack"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_timu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="请填写调查标题"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:maxLength="20"
                android:textSize="15sp"
                android:background="@color/transparent"
                android:textColorHint="@color/color_cc"/>
            <TextView
                android:id="@+id/tv_num"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/et_timu"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/20"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/alertdialog_line"/>

        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"

            android:layout_height="30dp">

            <TextView
                style="@style/commonTextView.Normal"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:text="是否必答" />

            <CheckBox
                android:id="@+id/mcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/checkbox_wenti_selector"
                android:button="@null"
                android:checked="true" />
        </RelativeLayout>

        <View
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/alertdialog_line"/>
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/commit"
            android:background="@drawable/bg_bt_blue_corner39"
            android:text="确认"
            android:textColor="@color/white"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
</layout>