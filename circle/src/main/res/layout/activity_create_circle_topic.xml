<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <include
            android:id="@+id/title"
            layout="@layout/title_toolbar_layout"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_cover"
            android:layout_width="109dp"
            android:src="@mipmap/icon_toupiao_add"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="109dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_whit5_bg"
            android:hint="话题名称（1-20个字）"
            android:maxLength="20"
            android:textColor="@color/color_1700f4"
            android:textColorHint="@color/color_4d16"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/iv_cover"
            app:layout_constraintTop_toBottomOf="@+id/iv_cover"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/color_1a4a"
            app:layout_constraintTop_toBottomOf="@+id/et_title" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="start"
            android:background="@drawable/shape_whit5_bg"
            android:hint="请输入话题描述"
            android:maxLength="100"
            android:textColor="@color/color_d916"
            android:textColorHint="@color/color_4d16"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/v_line" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:text="0/100"
            android:textColor="@color/color_8016"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/et_content" />

        <View
            android:id="@+id/v_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="16dp"
            android:background="@color/color_1a4a"
            app:layout_constraintTop_toBottomOf="@+id/et_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_post"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/bg_80a6_100"
            android:gravity="center"
            android:text="立即发起"
            android:textColor="@color/color_4d16"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>