<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <include
            android:id="@+id/title"
            layout="@layout/title_toolbar_layout"/>

        <com.changanford.common.widget.RequiredTextView
            android:id="@+id/tv_title_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="25dp"
            android:text="话题"
            android:textColor="@color/color_33"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="0/20"
            android:textColor="@color/color_AF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/et_title"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_whit5_bg"
            android:hint="话题名称"
            android:maxLength="20"
            android:textColor="@color/color_66"
            android:textColorHint="@color/color_cc"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title_hint"
            app:layout_constraintRight_toLeftOf="@+id/tv_title_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_hint"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="20dp"
            android:background="@color/line_default_color"
            app:layout_constraintTop_toBottomOf="@+id/et_title" />

        <com.changanford.common.widget.RequiredTextView
            android:id="@+id/tv_cover_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="19dp"
            android:text="封面"
            android:textColor="@color/color_33"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_cover"
            android:layout_width="80dp"
            android:src="@mipmap/ic_circle_topic_cover"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_cover_hint"
            app:layout_constraintLeft_toLeftOf="@+id/tv_cover_hint"
            android:layout_height="80dp"/>

        <com.changanford.common.widget.RequiredTextView
            android:id="@+id/tv_content_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="19dp"
            android:text="描述"
            android:textColor="@color/color_33"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_cover" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"
            android:background="@drawable/shape_whit5_bg"
            android:hint="填写描述会有更多人加入哦~"
            android:maxLength="100"
            android:textColor="@color/color_66"
            android:textColorHint="@color/color_cc"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_content_hint" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="0/100"
            android:textColor="@color/color_AF"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_post"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/bg_dd_20"
            android:gravity="center"
            android:text="立即发起"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>