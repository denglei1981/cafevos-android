<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_long_bar"
            android:layout_width="45dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/circle_details_pop_bg"
            android:layout_height="45dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/circle_post_long_bar_w"
                android:layout_height="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="发长贴"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pic_bar"
            android:layout_width="45dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_details_pop_bg"
            android:layout_height="45dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/circle_post_pic_w"
                android:layout_height="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="发图片"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_video_bar"
            android:layout_width="45dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_details_pop_bg"
            android:layout_height="45dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/circle_post_video_w"
                android:layout_height="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="发视频"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</layout>