<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/color_fc88_a10">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_talk_type"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/icon_white_jin"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="20"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="14dp"
            android:textColor="@color/color_8195C8"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/rv_tags"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="年轻人喜欢什么样的车" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/guide_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <View
            android:id="@+id/guide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="11dp"
            android:textColor="@color/color_01"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_talk_type"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="长安福特这一次给大家一个好大的惊喜，刚看到..." />

        <RelativeLayout
            android:id="@+id/ll_form_and_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/tv_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_content"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textColor="@color/color_33"
                android:textSize="14sp"
                tools:text="来自重庆车友圈" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_two_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:drawableStart="@mipmap/circle_location_details"
                android:drawablePadding="4dp"
                android:textColor="@color/color_cc"
                android:textSize="13sp"
                android:visibility="gone"
                tools:text="重庆市"
                tools:visibility="visible" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="14dp"
            android:textStyle="bold"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toTopOf="@+id/ll_form_and_city"
            app:layout_constraintLeft_toLeftOf="@+id/tv_content"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="重庆长安福特EVOS华丽登场" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_title"
            app:layout_constraintLeft_toLeftOf="@+id/tv_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_01"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_sub_title"
            app:layout_constraintStart_toEndOf="@+id/iv_head"
            app:layout_constraintTop_toTopOf="@+id/iv_head"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="LALA" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/circle_00095"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="@+id/iv_head"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:text="5分钟前"
            tools:visibility="visible" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintEnd_toStartOf="@+id/iv_very_post"
            app:layout_constraintStart_toEndOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/tv_name">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_user_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxHeight="@dimen/dp_32"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_follow"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/shap_e5_12"
                android:gravity="center"
                android:textColor="@color/circle_app_color"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_name"
                app:layout_constraintEnd_toStartOf="@+id/iv_very_post"
                app:layout_constraintStart_toEndOf="@+id/rv_user_tag"
                app:layout_constraintTop_toTopOf="@+id/tv_name"
                tools:text="关注" />


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_very_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_18"
            android:src="@mipmap/ic_essence"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/iv_head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_head"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>