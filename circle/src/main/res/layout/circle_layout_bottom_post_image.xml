<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/circle_FAFBFD"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_talk"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_weight="1"
        android:background="@drawable/circle_white_17_bg"
        android:drawableStart="@mipmap/circle_edit_pb"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="你可以说点什么哦"
        android:textColor="@color/color_cc"
        android:textSize="13sp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/circle_talk_image"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:textColor="@color/color_99"
        android:textSize="@dimen/sp_10"
        tools:text="255" />

    <LinearLayout
        android:id="@+id/ll_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/circle_no_like_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_10"
            tools:text="255" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/circle_no_collection_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_collection_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_10"
            tools:text="255" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_share_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="19dp"
        android:drawableTop="@mipmap/circle_share_image"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:textColor="@color/color_99"
        android:textSize="@dimen/sp_10"
        tools:text="255" />

</LinearLayout>