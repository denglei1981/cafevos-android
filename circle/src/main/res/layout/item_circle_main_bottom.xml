<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bean"
            type="com.changanford.circle.bean.CircleMainBottomItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_talk"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/circle_talk_20_bg"
            android:drawableStart="@mipmap/circle_talk_hint"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingEnd="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="年轻人喜欢什么样的车"
            android:textColor="@color/circle_8195C8"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_bg"
            app:layout_constraintTop_toBottomOf="@+id/iv_bg"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="长安福特全新SUV S202预告图解码"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_talk" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_head"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="JakeLee先生"
            android:textColor="@color/circle_B0B8C0"
            android:textSize="11sp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintRight_toLeftOf="@+id/iv_like"
            app:layout_constraintBottom_toBottomOf="@+id/iv_head"
            app:layout_constraintLeft_toRightOf="@+id/iv_head"
            app:layout_constraintTop_toTopOf="@+id/iv_head" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textColor="@color/color_99"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_head"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_head" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_like"
            android:layout_width="13dp"
            android:layout_height="12.5dp"
            android:layout_marginEnd="2dp"
            android:src="@mipmap/circle_no_like_image"
            app:layout_constraintBottom_toBottomOf="@+id/tv_like_num"
            app:layout_constraintRight_toLeftOf="@+id/tv_like_num"
            app:layout_constraintTop_toTopOf="@+id/tv_like_num" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_head"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_very"
            android:layout_width="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/iv_bg"
            app:layout_constraintLeft_toLeftOf="@+id/iv_bg"
            android:src="@mipmap/circle_very_post"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_play"
            android:layout_width="41dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/iv_bg"
            app:layout_constraintRight_toRightOf="@+id/iv_bg"
            app:layout_constraintTop_toTopOf="@+id/iv_bg"
            android:src="@mipmap/circle_play_icon"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bg"
            android:layout_height="41dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>