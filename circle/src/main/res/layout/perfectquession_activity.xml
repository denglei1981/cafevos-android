<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/circle_title_view" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/prefectquessrec"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="长按可以进行排序"
                    android:textColor="@color/color_cc" />

                <RelativeLayout

                    android:id="@+id/ll_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/circle_shape_xuxian">

                    <TextView
                        android:id="@+id/text"
                        style="@style/commonTextView.Normal.Bold"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:text="添加选项" />
                    <TextView
                        style="@style/commonTextView.Bold"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:layout_toLeftOf="@id/text"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:text="+" />
                </RelativeLayout>

                <include
                    android:id="@+id/addchoice"
                    layout="@layout/perfect_changemultesingle" />

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/commit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bg_bt_blue_corner39"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
