<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.changanford.common.bean.NewCircleBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:background="@color/white">
        <com.changanford.common.ui.view.WTextView
            android:textStyle="bold"
            android:id="@+id/wtv_ranking"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            tools:text="1"
            android:textColor="@color/color_FC5E42"
            android:textSize="@dimen/sp_17"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_cover"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/wtv_ranking"
            android:layout_marginStart="@dimen/dp_10"
            tools:background="@color/color_00095B"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            app:shapeAppearanceOverlay="@style/rounded5ImageStyle"/>
        <com.changanford.common.ui.view.WTextView
            android:id="@+id/wtv_title"
            android:layout_marginStart="@dimen/dp_10"
            style="@style/w_style_txt_ellipsize"
            app:layout_constraintTop_toTopOf="@id/img_cover"
            app:layout_constraintStart_toEndOf="@id/img_cover"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="美食街区"
            android:text="@{model.name}"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_15" />
        <com.changanford.common.ui.view.WTextView
            android:id="@+id/wtv_des"
            android:gravity="center_vertical"
            style="@style/w_style_txt_ellipsize"
            app:layout_constraintStart_toStartOf="@id/wtv_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="唯有美食不可辜负"
            android:text="@{model.description}"
            android:textColor="@color/color_74889D"
            android:textSize="@dimen/sp_13" />
        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintBottom_toBottomOf="@id/img_cover"
            app:layout_constraintStart_toStartOf="@id/wtv_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_circle_tag"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>