<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.changanford.common.bean.NewCircleBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="76dp"
        android:layout_height="109dp"
        android:layout_marginEnd="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/shadow_f9_5dp"
            app:shapeAppearanceOverlay="@style/rounded12ImageStyle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_top_tips"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@mipmap/ic_my_circle_top_tips"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wtv_title"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/shadow_661f_b12dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="çŽ©+" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>