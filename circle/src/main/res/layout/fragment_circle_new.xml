<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlEnableLoadMore="false"
        android:layout_marginTop="@dimen/dp_60"
        android:paddingBottom="@dimen/dp_60">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/composeView_recommended"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <include
                    android:visibility="gone"
                    android:id="@+id/in_myCircle"
                    layout="@layout/in_my_circle"/>
                <com.changanford.common.ui.view.WTextView
                    android:visibility="visible"
                    tools:visibility="visible"
                    android:id="@+id/wtv_hotList"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/composeView_recommended"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_hotList"
                    android:textColor="@color/color_34"
                    android:textSize="@dimen/sp_16" />
                <com.changanford.common.ui.view.WTextView
                    android:visibility="visible"
                    tools:visibility="visible"
                    android:drawablePadding="@dimen/dp_5"
                    android:id="@+id/wtv_allHot"
                    android:layout_marginEnd="@dimen/dp_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/wtv_hotList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_all"
                    android:textColor="@color/color_74889D"
                    android:textSize="@dimen/sp_14"
                    android:drawableEnd="@mipmap/right_74889d"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="visible"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/wtv_hotList"
                    android:id="@+id/recyclerView_hot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_circle_hotlist"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_15"/>
                <include
                    android:id="@+id/in_youLike"
                    layout="@layout/in_circle_guessyoulike"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_test"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:text="到问答列表"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</layout>