<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_cover"
            android:layout_width="106dp"
            android:layout_height="153dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_cover"
            android:background="@drawable/bg_circle_bottom_"
            app:layout_constraintRight_toRightOf="@+id/iv_cover"
            app:layout_constraintTop_toTopOf="@+id/iv_cover"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
            android:layout_height="0dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_auth"
            android:layout_width="42dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
            app:layout_constraintRight_toRightOf="@+id/iv_cover" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_cover"
            app:layout_constraintRight_toRightOf="@+id/iv_cover"
            app:layout_constraintTop_toTopOf="@+id/iv_cover" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_personal_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_d9ff"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_join_type"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:background="@drawable/bg_e5ff_24"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/color_16"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
            app:layout_constraintLeft_toLeftOf="@+id/iv_cover" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>