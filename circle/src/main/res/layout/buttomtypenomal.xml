<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_fafbfd"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_marginRight="10dp"
    android:id="@+id/llcon"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_nomal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/text_color"
        android:text="选择模块"/>
    <ImageView
        android:layout_width="6dp"
        android:layout_height="15dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toRightOf="@id/tv_nomal"
        app:layout_constraintTop_toTopOf="@id/tv_nomal"
        app:layout_constraintBottom_toBottomOf="@id/tv_nomal"
        android:src="@mipmap/right_arrow_black"/>
</androidx.constraintlayout.widget.ConstraintLayout>