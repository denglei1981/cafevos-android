<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/shape_white_top_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_33"
        android:paddingBottom="@dimen/dp_19"
        tools:minHeight="@dimen/dp_200">
        <com.changanford.common.ui.view.WTextView
            android:id="@+id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/str_circleType"
            android:textColor="@color/color_0817"
            android:textSize="@dimen/sp_15"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_6"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spanCount="3"
            tools:listitem="@layout/item_circle_selecttype"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
        <androidx.appcompat.widget.AppCompatButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btn_cancel"
            android:layout_marginTop="@dimen/dp_60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_determine"
            app:layout_constraintTop_toBottomOf="@id/recyclerView"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_14"
            android:text="@string/str_cancel"
            android:background="@drawable/shape_f1f3f5_20dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btn_determine"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="@id/btn_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_cancel"
            app:layout_constraintTop_toBottomOf="@id/recyclerView"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:text="@string/str_determine"
            android:background="@drawable/shape_00095b_20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>