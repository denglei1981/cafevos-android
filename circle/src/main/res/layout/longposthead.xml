<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/t_fl"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="20dp"
            android:background="@drawable/shap_f4f4f4"
            app:layout_constraintDimensionRatio="h,335:125"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/iv_addfm"
                android:src="@mipmap/longpostadd"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_fm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请上传封面"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                android:textColor="#ffcccccc"
                android:textSize="14sp" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/ivFm"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_biaoti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="20"
            android:minEms="6"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:theme="@style/MyEditText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/t_fl" />

        <TextView
            android:id="@+id/tvline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_default_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_biaoti" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入正文内容，字数小于200"
            android:maxLength="200"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/text_color"
            android:textSelectHandle="@color/transparent"
            android:textSize="14sp"
            android:theme="@style/MyEditText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvline" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_etcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:textColor="#AFB3B6"
            android:textSize="12sp"
            android:text="0/200"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>