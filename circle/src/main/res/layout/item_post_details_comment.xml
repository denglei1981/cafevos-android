<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bean"
            type="com.changanford.circle.bean.CommentListBean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10">

        <include
            android:id="@+id/layout_header"
            layout="@layout/include_home_item_header_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/color_d916"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/layout_header"
            app:layout_constraintRight_toRightOf="@+id/layout_header"
            app:layout_constraintTop_toBottomOf="@+id/layout_header"
            tools:text="期待！我们一起冲冲冲！" />

        <LinearLayout
            android:id="@+id/ll_child"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_081700f4_8"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/layout_header"
            app:layout_constraintRight_toRightOf="@+id/layout_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_child_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:drawableEnd="@mipmap/ic_right_app_color"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/color_1700f4"
                android:textSize="12sp"
                tools:text="共5回复" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@{bean.timeStr}"
            android:textColor="@color/color_8016"
            android:textSize="@dimen/sp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_child"
            app:layout_goneMarginTop="12dp"
            tools:text="5分钟前" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="回复"
            android:textColor="@color/color_1700f4"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@+id/tv_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_time" />

        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="19dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_time"
            app:layout_constraintRight_toLeftOf="@+id/tv_reply"
            app:layout_constraintTop_toTopOf="@+id/tv_time">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:src="@mipmap/circle_comment_no_like" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_8016"
                android:textSize="@dimen/sp_10"
                app:layout_constraintLeft_toLeftOf="@+id/iv_like"
                app:layout_constraintRight_toRightOf="@+id/iv_like"
                app:layout_constraintTop_toBottomOf="@+id/iv_like"
                tools:text="2131" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>