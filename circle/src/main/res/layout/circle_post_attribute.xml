<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <View
            android:id="@+id/v_line_one"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ee" />

        <RelativeLayout
            android:id="@+id/rl_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="17dp"
            android:paddingBottom="17dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_post_topic_left" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_topic"
                android:text="添加话题"
                android:layout_marginStart="8dp"
                android:textColor="@color/color_16"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_topic"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/tv_topic"
                android:background="@drawable/bg_081700f4_12"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="9dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_topic_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="选择话题"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp"
                    tools:text="春日热“练”" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delete_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="9dp"
                    android:text="X"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_74889d" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ee" />

        <RelativeLayout
            android:id="@+id/rl_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="17dp"
            android:paddingBottom="17dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_post_circle_left" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_circle"
                android:text="选择圈子"
                android:textColor="@color/color_16"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_circle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/tv_circle"
                android:background="@drawable/bg_081700f4_12"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="9dp"
                android:visibility="gone"
                tools:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_circle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="选择圈子"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp"
                    tools:text="春日热“练”" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delete_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="9dp"
                    android:text="X"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_74889d" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ee" />

        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="17dp"
            android:paddingBottom="17dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_post_address_left" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_address"
                android:text="添加位置"
                android:layout_marginStart="8dp"
                android:textColor="@color/color_16"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/tv_address"
                android:background="@drawable/bg_081700f4_100"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="9dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:maxWidth="160dp"
                    android:maxLines="1"
                    android:text="选择地址"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp"
                    tools:text="春日热春日热春日热春日热春日热“练”" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delete_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="9dp"
                    android:text="X"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_74889d" />
        </RelativeLayout>
    </LinearLayout>
</layout>