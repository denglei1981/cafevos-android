<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <View
            android:id="@+id/v_line_one"
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <RelativeLayout
            android:id="@+id/rl_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_post_topic_left" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/iv_topic"
                android:text="添加话题"
                android:textColor="@color/color_16"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_topic"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/tv_topic"
                android:background="@drawable/bg_081700f4_100"
                android:gravity="center"
                android:orientation="horizontal"
                tools:visibility="visible"
                android:paddingStart="9dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_topic_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:maxWidth="220dp"
                    android:maxLines="1"
                    android:text="选择话题"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp"
                    tools:text="春日热“练”" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delete_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_delete_post_item"
                    android:paddingStart="5dp"
                    android:paddingEnd="9dp"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_74889d" />
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:src="@mipmap/post_car_down_ic"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/rl_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_tips">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_item_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_post_car_left" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/iv_item_car"
                    android:text="添加车型"
                    android:textColor="@color/color_16"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_car"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/tv_car"
                    android:background="@drawable/bg_081700f4_100"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="9dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_car_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:ellipsize="end"
                        android:maxWidth="220dp"
                        android:maxLines="1"
                        android:textColor="@color/color_1700F4"
                        android:textSize="14sp"
                        tools:text="春日热“练”" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_delete_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@mipmap/ic_delete_post_item"
                        android:paddingStart="5dp"
                        android:paddingEnd="9dp"
                        android:textColor="@color/color_1700F4"
                        android:textSize="14sp" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_74889d" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:id="@+id/rl_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_post_circle_left" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/iv_circle"
                android:text="选择圈子"
                android:textColor="@color/color_16"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_circle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/tv_circle"
                android:background="@drawable/bg_081700f4_100"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="9dp"
                android:visibility="gone"
                tools:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_circle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:maxWidth="220dp"
                    android:maxLines="1"
                    android:text="选择圈子"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp"
                    tools:text="春日热“练”" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delete_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_delete_post_item"
                    android:paddingStart="5dp"
                    android:paddingEnd="9dp"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_74889d" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ee"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="14dp"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_post_address_left" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/iv_address"
                android:text="添加位置"
                android:textColor="@color/color_16"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/tv_address"
                android:background="@drawable/bg_081700f4_100"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="9dp"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:maxWidth="220dp"
                    android:maxLines="1"
                    android:text="选择地址"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp"
                    tools:text="春日热春日热春日热春日热春日热春日热春日热春日热春日热春日热春日热春日热春日热春日热春日热春日热春日热春日热春日热春日热“练”" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delete_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_delete_post_item"
                    android:paddingEnd="9dp"
                    android:textColor="@color/color_1700F4"
                    android:textSize="14sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_74889d" />
        </RelativeLayout>
    </LinearLayout>
</layout>