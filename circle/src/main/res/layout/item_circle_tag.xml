<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.changanford.common.bean.NewCirceTagBean" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.changanford.common.ui.view.WTextView
            android:text="@{model.tagName}"
            android:background="@drawable/shadow_f2f4f9_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="3dp"
            android:minHeight="@dimen/dp_15"
            android:drawableStart="@mipmap/circle_left_tag_ic"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:textSize="@dimen/sp_10"
            tools:text="Tag"
            android:maxWidth="@dimen/dp_90"
            style="@style/w_style_txt_ellipsize"
            android:textColor="@color/circle_1700F4"/>
    </LinearLayout>
</layout>