<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.changanford.common.bean.NewCirceTagBean" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@color/black">

        <com.changanford.common.ui.view.WTextView
            android:id="@+id/tv_tag"
            style="@style/w_style_txt_ellipsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:background="@drawable/shadow_f2f4f9_8dp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:maxWidth="@dimen/dp_90"
            android:minHeight="20dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@{model.tagName}"
            android:textColor="@color/circle_1700F4"
            android:textSize="@dimen/sp_10"
            tools:text="Tag" />
    </LinearLayout>
</layout>