<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/tv_tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:text="年轻人喜欢什么样的车"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            motion:layout_constraintBottom_toBottomOf="@+id/iv_top_bg"
            motion:layout_constraintStart_toEndOf="@+id/iv_header" />
        <Constraint
            android:id="@id/coll_tool_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.38" />

        <Constraint
            android:id="@+id/iv_header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@drawable/image_recommend_test"
            motion:layout_constraintBottom_toBottomOf="@+id/iv_top_bg"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/iv_top_bg"
            motion:shapeAppearanceOverlay="@style/rounded5ImageStyle" />

        <Constraint
            android:id="@+id/iv_top_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_recommend_test"
            android:visibility="visible"
            motion:layout_constraintDimensionRatio="375:148"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/dp_18"
            android:text="19 资讯  122365 阅读"
            android:textColor="#ff999999"
            android:visibility="visible"
            android:textSize="13sp"
            motion:layout_constraintStart_toEndOf="@+id/iv_header"
            motion:layout_constraintTop_toBottomOf="@+id/iv_top_bg" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="年轻人喜欢什么样的车"
            android:textColor="@color/color_00"
            android:textSize="15sp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/coll_tool_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.38" />

        <Constraint
            android:id="@+id/iv_header"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@drawable/image_recommend_test"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"

            motion:shapeAppearanceOverlay="@style/circleImageStyle" />


        <Constraint
            android:id="@+id/iv_top_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_recommend_test"
            android:visibility="invisible"
            motion:layout_constraintDimensionRatio="375:148"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/dp_18"
            android:text="19 资讯  122365 阅读"
            android:textColor="#ff999999"
            android:visibility="gone"
            android:textSize="13sp"
            motion:layout_constraintStart_toEndOf="@+id/iv_header"
            motion:layout_constraintTop_toBottomOf="@+id/iv_top_bg" />

    </ConstraintSet>
    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear" />
</MotionScene>
