<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_home_acts_item_bg"
        android:paddingBottom="@dimen/dp_18">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_acts"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_recommend_test"
            app:layout_constraintDimensionRatio="335:200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/rounded5TopImageStyle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="长安福特 未来活动体验日，于2021年9月11日正式上市"
            android:textColor="#ff0f1524"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_acts"
            app:layout_constraintStart_toStartOf="@+id/iv_acts"
            app:layout_constraintTop_toBottomOf="@+id/iv_acts" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tag_one"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_home_unfollow_bg"
            android:gravity="center"
            android:minWidth="@dimen/dp_40"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:text="官方"
            android:textColor="#ff74889d"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tv_tips"
            app:layout_constraintTop_toBottomOf="@+id/tv_tips" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_follow"
            style="@style/materialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@color/color_F4"
            android:padding="@dimen/dp_4"
            android:text="进行中"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:cornerRadius="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_acts"
            app:layout_constraintStart_toStartOf="@+id/iv_acts" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tag_two"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_home_unfollow_bg"
            android:gravity="center"
            android:minWidth="@dimen/dp_40"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:text="福域活动"
            android:textColor="#ff74889d"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/tv_tag_one"
            app:layout_constraintTop_toBottomOf="@+id/tv_tips"
            app:layout_goneMarginStart="@dimen/dp_0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_act_times"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="活动截止时间：2021.09.11 12:00"
            android:textColor="#ff9fabb7"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_tag_one"
            app:layout_constraintTop_toBottomOf="@+id/tv_tag_two" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_act_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="#ff9fabb7"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_tag_one"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_act_times" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_act_look_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dp_19"
            android:text=""
            android:textColor="#ff9fabb7"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_act_times" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_act_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text=""
            android:textColor="#ff9fabb7"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="@+id/tv_tips"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_act_address" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_to_look_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_6"
            android:text="点击查看"
            android:textColor="#01025C"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@+id/tv_act_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_act_address" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_end_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/shape_r_13_c_25c"
            android:gravity="center"
            android:minWidth="@dimen/dp_54"
            android:minHeight="@dimen/dp_25"
            android:text="结束"
            android:textColor="#01025C"
            android:textSize="@dimen/sp_13"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_home_act_address" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>