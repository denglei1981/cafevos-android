<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_081700f4_12">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_shopping"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/dp_15"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/rounded5ImageStyle"
            tools:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_home_auth_vip"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_shopping"
            app:layout_constraintCircle="@id/iv_shopping"
            app:layout_constraintCircleAngle="120"
            app:layout_constraintCircleRadius="30dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_shopping" />

        <TextView
            android:id="@+id/tv_author_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/color_16"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_shopping"
            app:layout_constraintTop_toTopOf="@+id/iv_shopping"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="这里是兔子" />

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/color_d916"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_author_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="￥100" />

        <com.changanford.common.ui.view.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2"
            android:text="@string/str_since"
            android:textColor="@color/color_d916"
            android:textSize="@dimen/sp_9"
            app:layout_constraintBottom_toBottomOf="@id/tv_sub_title"
            app:layout_constraintStart_toEndOf="@id/tv_sub_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>