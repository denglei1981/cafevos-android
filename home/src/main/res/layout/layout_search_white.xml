<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.changanford.common.widget.ClearEditText
            android:id="@+id/search_content"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@drawable/shape_search_bg_white"
            android:drawableLeft="@mipmap/icon_common_gray_search"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="请输入你喜欢的内容"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.84"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/search_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/search_content"
            app:layout_constraintTop_toTopOf="@+id/search_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>