<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        style="@style/AppText.lineSpace.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#ff2d2d2d"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="福克斯 穿越千年的丝绸古道，感叹生命的繁盛与荒无之地的寂静仅一步之遥。" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_topic"
        style="@style/AppText.lineSpace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="8dp"
        android:textColor="#ff74889d"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        tools:text="#驭见美好之旅#sfsfsdfsfsdf好感好司法解释好舒服说嘎Hogan烘干螯合钙还送" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_one"
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_recommed_default"
        app:layout_constraintEnd_toStartOf="@+id/iv_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_topic"
        app:shapeAppearanceOverlay="@style/rounded5ImageStyle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_two"
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_recommed_default"
        app:layout_constraintEnd_toStartOf="@+id/iv_three"
        app:layout_constraintStart_toEndOf="@+id/iv_one"
        app:layout_constraintTop_toBottomOf="@+id/tv_topic"
        app:shapeAppearanceOverlay="@style/rounded5ImageStyle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_three"
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_recommed_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_two"
        app:layout_constraintTop_toBottomOf="@+id/tv_topic"
        app:shapeAppearanceOverlay="@style/rounded5ImageStyle" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pic_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:drawableStart="@drawable/icon_home_more_pics"
        android:drawablePadding="4dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_three"
        app:layout_constraintEnd_toEndOf="@+id/iv_three"
        tools:text="12" />


</androidx.constraintlayout.widget.ConstraintLayout>