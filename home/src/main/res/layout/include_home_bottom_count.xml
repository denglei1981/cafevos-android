<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="lifeCycleOwner"
            type="androidx.lifecycle.LifecycleOwner" />


        <import type="android.content.Context" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">
        <com.changanford.home.widget.DrawCenterTextView
            android:id="@+id/tv_time_look_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:image="@drawable/icon_home_look_count"
            tools:text="123123" />
        <com.changanford.home.widget.DrawCenterTextView
            android:id="@+id/tv_comment_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:image="@drawable/icon_home_look_msg_count"
            tools:text="123123" />
        <com.changanford.home.widget.DrawCenterTextView
            android:id="@+id/tv_like_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableStart="@drawable/icon_home_look_like_count"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            app:image="@drawable/icon_home_look_like_count"
            tools:text="1"/>

    </LinearLayout>
</layout>