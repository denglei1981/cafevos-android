<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_bg"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_home_gradient_corner20_gray"
        app:layout_constraintDimensionRatio="125:175"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_head"
            app:shapeAppearanceOverlay="@style/circleImageStyle"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:scaleType="centerCrop"
            android:src="@drawable/image_recommed_default"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/btn_follow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_head" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_follow"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:background="@color/gray_e5e5ee"
            android:backgroundTint="@color/gray_e5e5ee"
            android:elevation="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="+关注"
            android:textColor="@color/blue_tab"
            android:textSize="@dimen/sp_12"
            app:cornerRadius="12dp"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>