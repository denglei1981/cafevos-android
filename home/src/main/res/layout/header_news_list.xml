<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="专题"
            android:textColor="#ff0f1524"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_more"
            android:textColor="#ff999999"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title" />


        <com.zhpan.bannerview.BannerViewPager
            android:id="@+id/b_viewpager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            app:layout_constraintDimensionRatio="335:175"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
          />


        <com.zhpan.indicator.DrawableIndicator
            android:id="@+id/dr_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b_viewpager" />


        <FrameLayout
            android:id="@+id/fl_bg"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#33ffffff"
            app:layout_constraintBottom_toBottomOf="@+id/b_viewpager"
            app:layout_constraintEnd_toEndOf="@+id/b_viewpager"
            app:layout_constraintStart_toStartOf="@+id/b_viewpager">

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="13dp"
                android:text="查看详情"
                android:textColor="#ff1b3b89"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="15dp"
                android:maxLength="12"
                android:maxLines="1"
                android:text="长安福特专题"
                android:textColor="#ffffffff"
                android:textSize="15sp" />

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>