<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circleImageStyle" />

            <LinearLayout
                android:id="@+id/ll_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:text="你是我的眼" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLength="12"
                    android:maxLines="2"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_12"
                    tools:text="2012.10.01" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bt_follow"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginEnd="20dp"
                android:elevation="0dp"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textAllCaps="false"
                android:textColor="@color/blue_tab"
                android:textSize="@dimen/sp_12"
                app:elevation="0dp"
                tools:text="关注" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_home_title"
            style="@style/AppText.lineSpace.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="#ff333333"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ll_info"
            app:layout_constraintStart_toStartOf="@+id/ll_info"
            app:layout_constraintTop_toBottomOf="@+id/ll_info"
            tools:text="重庆长安福特EVOS即将在今年华丽登场啊啦啦啦啦啦啦" />

        <WebView
            android:id="@+id/web_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="25dp"
            android:text="展开详情"
            android:textColor="@color/blue_tab"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/web_content" />

        <LinearLayout
            android:id="@+id/ll_special"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_gray_99_bg"
            app:layout_constraintStart_toStartOf="@+id/ll_info"
            app:layout_constraintTop_toBottomOf="@+id/tv_open">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="3dp"
                android:background="@drawable/shape_blue_819_bg"
                android:gravity="center"
                android:text="专题"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_topic_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/home_right_blue"
                android:drawablePadding="18dp"
                android:gravity="center_vertical|start"
                android:maxLength="16"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                tools:text="@string/app_name" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ads"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical"
            android:scaleType="centerCrop"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintDimensionRatio="669:320"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_special"
            app:layout_constraintWidth_percent="0.96"
            tools:visibility="visible" />

        <View
            android:id="@+id/home_gray_line"
            style="@style/homeGraLine"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_ads" />


        <TextView
            android:id="@+id/tv_home_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_28"
            android:text="@string/home_hot_recommend"
            android:textColor="#ff343434"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_gray_line" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableEnd="@drawable/icon_home_small_next"
            android:drawablePadding="4dp"
            android:text="@string/home_more"
            android:textColor="#ff74889d"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_home_hot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_home_hot" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_relate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_more" />


        <View
            android:id="@+id/home_gray_line_2"
            style="@style/homeGraLine"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_relate" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gr_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tv_home_hot,tv_home_more,home_gray_line_2,rv_relate" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>