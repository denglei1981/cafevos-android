<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppText" />



    <style name="AppText.black_15_3333">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppText.white_10">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppText.white_11">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppText.white_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppText.black_18_333_bold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppText.black_16_333_bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppText.limit" parent="AppText.black_15_3333">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="AppText.limit_line_1_length_10" >
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="AppText.black_15_333_padding_4">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">11dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="background">@color/white</item>
    </style>

   <style name="AppText.lineSpace">
       <item name="android:lineSpacingMultiplier">1.5</item>
   </style>
</resources>