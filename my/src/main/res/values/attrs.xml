<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MineView">
        <!--设置左侧图标-->
        <attr name="left_icon" format="reference" />
        <!--是否显示左侧图标-->
        <attr name="show_left_icon" format="boolean" />
        <!--左侧标题文字-->
        <attr name="left_text" format="string" />
        <!-- 左边字体颜色-->
        <attr name="left_text_color" format="color" />
        <!--右侧描述文字-->
        <attr name="right_text" format="string" />
        <!--右边字体颜色 -->
        <attr name="right_text_color" format="color" />
        <!--是否显示右侧小箭头-->
        <attr name="show_right_arrow" format="boolean" />
        <!--是否显示下划线-->
        <attr name="show_bottom_line" format="boolean" />
        <!--下划线的高度-->
        <attr name="bottom_line_size" format="integer" />
        <!--下划线的颜色-->
        <attr name="bottom_line_color" format="color" />
        <!--设置右侧图标-->
        <attr name="right_icon" format="reference" />
        <!--最小高度-->
        <attr name="min_height" format="integer" />
        <attr name="line_left_right_margin" format="integer" />
    </declare-styleable>
</resources>