<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_20">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/circle_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圈主"
            android:textColor="#01025C"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_icon"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_12"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circle_user"
            app:layout_goneMarginTop="@dimen/dp_0"
            app:shapeAppearanceOverlay="@style/roundedCornerImageStyle" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_2"
            tools:text="大家一起嗨"
            android:textStyle="bold"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toRightOf="@+id/item_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_icon"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_lift_top_r_5_c_00"
            android:gravity="center"
            android:minWidth="@dimen/dp_40"
            android:minHeight="@dimen/dp_17"
            android:text="通过"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_11"
            app:layout_constraintLeft_toLeftOf="@+id/item_icon"
            app:layout_constraintTop_toTopOf="@+id/item_icon" />


        <TextView
            android:id="@+id/item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="圈子描述圈子描述圈子描述圈子描述圈子描述圈子描述圈子"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_13"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="@+id/item_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_title" />

        <TextView
            android:layout_marginTop="@dimen/dp_4"
            android:id="@+id/item_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="123 成员  12232 帖子"
            android:textColor="@color/color_cc"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/item_icon"
            app:layout_constraintStart_toStartOf="@id/item_title"
            app:layout_constraintEnd_toStartOf="@id/img_star"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_star"
            android:visibility="gone"
            tools:visibility="visible"
            android:paddingStart="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="@id/item_user"
            app:layout_constraintStart_toEndOf="@id/item_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/item_icon"
            android:src="@mipmap/ic_circle_star_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/reason_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_login_sms_r_2_c_89"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_40"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_10"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_icon">

            <TextView
                android:id="@+id/item_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="原因：等级不达标"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/item_operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@mipmap/arrow_right_5c"
                android:drawablePadding="@dimen/dp_4"
                android:padding="2dp"
                android:text="去审核"
                android:textColor="@color/color_1700F4"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#E7E7E7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reason_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>