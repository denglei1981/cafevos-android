<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <ImageView
            android:id="@+id/icon_sys"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="14dp"
            android:src="@mipmap/icon_msg_sys"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow_common"
            app:layout_constraintBottom_toBottomOf="@id/icon_sys"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon_sys" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/loading_dot_red"
            android:paddingHorizontal="@dimen/dp_5"
            android:text="99+"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/icon_sys"
            app:layout_constraintRight_toLeftOf="@+id/right"
            app:layout_constraintTop_toTopOf="@+id/icon_sys"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/message_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_have_bg"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@+id/icon_sys"
            app:layout_constraintTop_toTopOf="@+id/icon_sys" />

        <TextView
            android:id="@+id/title_sys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:text="系统消息"
            android:textColor="@color/color_d916"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/icon_sys"
            app:layout_constraintLeft_toRightOf="@+id/icon_sys"
            app:layout_constraintTop_toTopOf="@+id/icon_sys" />

        <TextView
            android:id="@+id/des_sys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其余系统消息通知"
            android:textColor="#AFB3B6"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/icon_sys"
            app:layout_constraintLeft_toLeftOf="@+id/title_sys" />

        <View
            style="@style/line"
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="@+id/title_sys"
            app:layout_constraintTop_toBottomOf="@+id/icon_sys" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>