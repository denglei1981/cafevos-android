<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/car_toolbar"
        layout="@layout/view_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/car_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_176"
                android:background="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_def_square_img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedCornerImageStyle" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_num_title"
                style="@style/text_car_info_lift_style"
                android:layout_marginTop="@dimen/dp_62"
                android:text="车牌号"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/car_pic" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:gravity="bottom"
                app:layout_constraintBottom_toBottomOf="@+id/card_num_title"
                app:layout_constraintLeft_toRightOf="@+id/card_num_title"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_num"
                    style="@style/text_car_info_right_style"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/dp_0"
                    android:drawablePadding="7dp"
                    android:drawableRight="@mipmap/ic_grey_right_small"
                    android:gravity="center"
                    android:text="" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_car_num"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_28"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_r_16_c_95"
                    android:gravity="center"
                    android:text="添加车牌"
                    android:textColor="@color/color_1700f4"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone" />

            </RelativeLayout>

            <View
                android:id="@+id/line"
                style="@style/line_car_info_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_num_title" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_vin_title"
                style="@style/text_car_info_lift_style"
                android:text="车辆VIN码"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_vin"
                style="@style/text_car_info_right_style"
                android:gravity="right"
                android:text=""
                app:layout_constraintLeft_toRightOf="@+id/card_vin_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <View
                android:id="@+id/line1"
                style="@style/line_car_info_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_vin_title" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_model_title"
                style="@style/text_car_info_lift_style"
                android:text="车型"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_model"
                style="@style/text_car_info_right_style"
                android:gravity="right"
                android:text=""
                app:layout_constraintLeft_toRightOf="@+id/card_model_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1" />

            <View
                android:id="@+id/line2"
                style="@style/line_car_info_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_model_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_time_title"
                style="@style/text_car_info_lift_style"
                android:text="购车日期"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_time"
                style="@style/text_car_info_right_style"
                android:gravity="right"
                android:text=""
                app:layout_constraintLeft_toRightOf="@+id/card_time_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2" />

            <View
                android:id="@+id/line3"
                style="@style/line_car_info_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_time_title" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_dealer_title"
                style="@style/text_car_info_lift_style"
                android:text="经销商名称"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_dealer"
                style="@style/text_car_info_right_style"
                android:gravity="right"
                android:text=""
                app:layout_constraintLeft_toRightOf="@+id/card_dealer_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line3" />

            <View
                android:id="@+id/line4"
                style="@style/line_car_info_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_dealer_title" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_dealer_phone_title"
                style="@style/text_car_info_lift_style"
                android:text="经销商电话"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_dealer_phone"
                style="@style/text_car_info_right_style"
                android:gravity="right"
                android:text=""
                app:layout_constraintLeft_toRightOf="@+id/card_dealer_phone_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line4" />

            <View
                android:id="@+id/line5"
                style="@style/line_car_info_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_dealer_phone_title" />


            <View
                android:id="@+id/line6"
                style="@style/line_car_info_style"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_0"
                android:layout_marginEnd="@dimen/dp_0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/car_qy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:text="车主权益"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line6" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/car_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_40"
                android:text="车主互动：车主可申请创建属于自己“圈内”的圈子，并可在长安福特发起专属活动。"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/car_qy_title" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="line6,car_qy_title,car_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/delete_car"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@drawable/border_0095b_29dp"
            android:gravity="center"
            android:text="取消绑定"
            android:textColor="@color/circle_1700F4"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_auth"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_00095b_29dp"
            android:gravity="center"
            android:text="设为默认车辆"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>