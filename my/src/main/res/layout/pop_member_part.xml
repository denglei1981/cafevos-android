<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/pop_sign_bg"
        android:gravity="center_horizontal"
        android:minWidth="@dimen/dp_285"
        android:minHeight="@dimen/dp_285"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="设置身份"
            android:textColor="#081725"
            android:textSize="@dimen/sp_15" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_check_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_29"
                android:text="当前选中 3 人"
                android:textColor="#081725"
                android:textSize="@dimen/sp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_icon"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_23"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageStyle" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:ellipsize="end"
                android:enabled="true"
                android:maxLines="1"
                android:text="我不是团团"
                android:textColor="#081725"
                android:textSize="@dimen/sp_15"
                app:layout_constraintBottom_toBottomOf="@+id/item_icon"
                app:layout_constraintLeft_toRightOf="@+id/item_icon"
                app:layout_constraintTop_toTopOf="@+id/item_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_11"
                android:background="@drawable/shape_r_8_c_5c"
                android:minWidth="@dimen/dp_30"
                android:paddingStart="@dimen/dp_6"
                android:paddingTop="@dimen/dp_3"
                android:paddingEnd="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_3"
                android:text="圈主"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_10"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/item_name"
                app:layout_constraintTop_toTopOf="@+id/item_name" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="item_icon,item_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/circle_tag_rv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:padding="@dimen/dp_10" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F30542"
            android:textSize="@dimen/sp_11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/btn_one_clear_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="#71747B"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/btn_one_clear_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="#01025C"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>