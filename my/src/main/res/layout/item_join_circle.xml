<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_icon"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/rounded12ImageStyle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_auth"
            android:layout_width="42dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/item_icon"
            app:layout_constraintRight_toRightOf="@+id/item_icon" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_16"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/item_icon"
            app:layout_constraintRight_toLeftOf="@+id/img_star"
            app:layout_constraintTop_toTopOf="@+id/item_icon"
            app:layout_constraintVertical_weight="1"
            tools:text="大家一起嗨" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:background="@drawable/bg_post_pic_fm"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="通过"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/item_icon"
            app:layout_constraintTop_toTopOf="@+id/item_icon" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_8016"
            android:textSize="12sp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="@+id/item_title"
            app:layout_constraintRight_toLeftOf="@+id/img_star"
            app:layout_constraintTop_toBottomOf="@+id/item_title"
            tools:text="圈子描述圈子描述圈子描述圈子描述圈子描述圈子描述圈子" />

        <TextView
            android:id="@+id/item_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/color_8016"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@id/img_star"
            app:layout_constraintStart_toStartOf="@id/item_title"
            app:layout_constraintTop_toBottomOf="@+id/item_date"
            tools:text="123 成员  12232 帖子" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:drawableStart="@mipmap/ic_left_sm_location"
            android:drawablePadding="2dp"
            android:textColor="@color/color_8016"
            android:textSize="10sp"
            android:visibility="gone"
            tools:visibility="visible"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="@+id/item_user"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toLeftOf="@+id/out_circle"
            app:layout_constraintTop_toBottomOf="@+id/item_user"
            tools:text="addrDesc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/out_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bord_1700f4_23"
            android:gravity="center"
            android:paddingStart="9dp"
            android:paddingTop="4dp"
            android:paddingEnd="9dp"
            android:paddingBottom="4dp"
            android:text="退出圈子"
            android:textColor="@color/color_1700f4"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/item_icon"
            app:layout_constraintRight_toRightOf="parent"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@mipmap/ic_circle_star_1"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_title"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_1a4a"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>