<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:minHeight="84dp"
            android:paddingBottom="7dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="17dp"
                android:src="@mipmap/fordicon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/shapeableRound" />

            <ImageView
                android:id="@+id/message_status"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/message_have_bg"
                app:layout_constraintRight_toLeftOf="@+id/iv_right"
                app:layout_constraintTop_toTopOf="@+id/iv_right" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/color_33"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@+id/icon"
                app:layout_constraintRight_toLeftOf="@+id/iv_right"
                app:layout_constraintTop_toTopOf="@+id/icon"
                tools:text="#小小圈子# 小肚鸡肠  将 小可爱爸爸 于2023-01-01 12:23:33 移出 小小圈子" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_right"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_marginEnd="19dp"
                app:layout_constraintBottom_toBottomOf="@+id/icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/icon"
                android:src="@mipmap/ic_def_square_img" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:textColor="@color/color_99"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="@+id/content"
                app:layout_constraintTop_toBottomOf="@+id/content"
                tools:text="09-02 22:03" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:background="@drawable/mine_interaction_follow_bg"
                android:paddingStart="7dp"
                android:paddingTop="2dp"
                android:paddingEnd="7dp"
                android:visibility="gone"
                android:paddingBottom="2dp"
                android:text="一键回关"
                android:textColor="@color/color_73A3D8"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="@+id/date"
                app:layout_constraintTop_toBottomOf="@+id/date"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/delete"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:background="@drawable/bg_ltlb_blue_corner10"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

</layout>