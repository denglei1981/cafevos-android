<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
   >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_circle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/rounded5ImageStyle"
        tools:src="@mipmap/image_mine" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_circle_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"

        android:ellipsize="end"
        android:maxEms="11"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_circle"
        app:layout_constraintTop_toTopOf="@+id/iv_circle"
        tools:text="@string/test_str" />
</androidx.constraintlayout.widget.ConstraintLayout>