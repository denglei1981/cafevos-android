<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView8"
        style="@style/commonTextView.Medium.Black"
        android:textSize="@dimen/sp_16"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/my_memberlevel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        style="@style/commonTextView.Medium.Black"
        android:layout_marginStart="@dimen/dp_20"
        tools:text="LV2"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        app:srcCompat="@mipmap/my_rightarrow" />

    <TextView
        android:id="@+id/textView10"
        style="@style/commonTextView.Small.LightBlue"
        android:layout_marginEnd="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_6"
        android:text="@string/my_memberupdate"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ProgressBar
        android:id="@+id/my_scorelevel"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        tools:progress="10"
        android:progress="0"
        android:progressDrawable="@drawable/progressbar_bg"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textView11"
        style="@style/commonTextView.Small.Black.Bold"
        android:layout_marginTop="@dimen/dp_10"
        tools:text="1800/2000"
        app:layout_constraintStart_toStartOf="@+id/my_scorelevel"
        app:layout_constraintTop_toBottomOf="@+id/my_scorelevel" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/linebg"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@id/textView11" />


</androidx.constraintlayout.widget.ConstraintLayout>