<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/left_icon"
            android:text="电话"
            android:textSize="@dimen/text_size_mid" />

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/right_icon"
            android:layout_toRightOf="@+id/left_text"
            android:ellipsize="end"
            android:enabled="true"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:text=""
            tools:text="V1.0.0"
            android:textSize="@dimen/text_size_mid" />
        <ImageView
            android:id="@+id/have_message"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/message_have_bg"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_toRightOf="@+id/right_text"
            android:layout_alignParentTop="true" />
        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp" />

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:minHeight="1dp" />
</LinearLayout>