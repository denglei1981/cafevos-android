<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/statusbar_view_height">

        <include
            android:id="@+id/mine_toolbar"
            layout="@layout/view_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/my_grade_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="福域等级"
                    android:textStyle="bold"
                    android:textColor="@color/color_16"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="当前成长值0"
                    android:textColor="@color/color_4d16"
                    android:textSize="@dimen/sp_10"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/my_grade_title" />


                <TextView
                    android:id="@+id/my_update_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/right_99"
                    android:text="去升级"
                    android:textColor="@color/color_d916"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/num"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/num" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/bg_f6_12"
                    app:layout_constraintTop_toBottomOf="@+id/num">


                    <TextView
                        android:id="@+id/my_grade_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="@dimen/dp_14"
                        android:textColor="@color/color_16"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold|italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="LV0" />

                    <TextView
                        android:id="@+id/my_grade_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:textColor="@color/color_8016"
                        android:textSize="@dimen/sp_10"
                        app:layout_constraintBottom_toTopOf="@+id/my_grade_progressbar"
                        app:layout_constraintLeft_toRightOf="@+id/my_grade_v"
                        tools:text="2343" />

                    <com.changanford.my.widget.HorizontalProgressBar
                        android:id="@+id/my_grade_progressbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="47dp"
                        app:layout_constraintBottom_toBottomOf="@+id/my_grade_v"
                        app:layout_constraintLeft_toLeftOf="@+id/my_grade_des"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/my_grade_v" />


                    <TextView
                        android:id="@+id/my_grade_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="8dp"
                        android:text="0/0"
                        android:textColor="@color/color_16"
                        android:textSize="@dimen/sp_10"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="@+id/my_grade_des"
                        app:layout_constraintTop_toBottomOf="@+id/my_grade_progressbar" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_168"
                    android:layout_marginTop="@dimen/dp_16"
                    android:visibility="gone"
                    app:banner_indicator_radius="@dimen/dp_8"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout" />

                <TextView
                    android:id="@+id/grow_uo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:text="成长值记录"
                    android:textStyle="bold"
                    android:textColor="@color/color_16"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/banner" />

                <include
                    android:id="@+id/grow_up"
                    layout="@layout/view_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/grow_uo_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>