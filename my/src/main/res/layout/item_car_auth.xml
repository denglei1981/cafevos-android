<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginEnd="@dimen/dp_19"
        android:background="@drawable/shape_r_5_c_ff"
        android:minHeight="@dimen/dp_170">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_vin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_13"
            android:text="VIN码："
            android:textColor="#666666"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_car_auth_status"
            android:gravity="center"
            android:minWidth="@dimen/dp_70"
            android:minHeight="@dimen/dp_27"
            android:paddingStart="@dimen/dp_14"
            android:paddingTop="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_6"
            android:text="已认证"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_7"
            android:background="#EEEEEE"
            app:layout_constraintTop_toBottomOf="@+id/tv_vin" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_21"
            android:text="FORD EVOS"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/car_pic"
            android:layout_width="@dimen/dp_182"
            android:layout_height="@dimen/dp_106"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_5"
            android:src="@mipmap/ic_car_auth_ex"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_car_num"
            android:layout_width="@dimen/dp_98"
            android:layout_height="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_car_auth_btn_bg"
            android:gravity="center"
            android:text="添加车牌"
            android:textColor="#00095B"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/tv_car_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_car_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_car_num"
            android:layout_width="@dimen/dp_98"
            android:layout_height="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_car_num_btn_bg"
            android:gravity="center"
            android:text="渝A 123333"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="@+id/tv_car_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_car_name" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/auth_reason"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/shape_auth_reson_bg"
            android:gravity="center"
            android:text="原因：由于个人信息有误审核未通过"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>