<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_medal_item_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_icon"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_110"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginLeft="@dimen/dp_0"
                app:shapeAppearanceOverlay="@style/roundedCornerImageStyle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_17"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                app:layout_constraintLeft_toRightOf="@+id/item_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_integral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_11"
                android:layout_marginEnd="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_8"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#1B3B89"
                android:textSize="@dimen/sp_15"
                app:layout_constraintBottom_toBottomOf="@+id/item_icon"
                app:layout_constraintLeft_toRightOf="@+id/item_icon"
                app:layout_constraintRight_toLeftOf="@+id/item_collect_num" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_collect_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_11"
                android:layout_marginEnd="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_8"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@+id/item_icon"
                app:layout_constraintLeft_toRightOf="@+id/item_integral"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>
</layout>