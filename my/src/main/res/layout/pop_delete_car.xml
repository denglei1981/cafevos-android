<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="@dimen/dp_285"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_whit5_bg"
        android:gravity="center"
        android:minHeight="@dimen/dp_180"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center"
            android:text="删除车辆确认"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13" />

        <TextView
            style="@style/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textColor="#081725"
                android:textSize="@dimen/sp_13"
                tools:text="是否确定取消关注" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/bg_color"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1px"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="取消"
                android:textColor="#71747B"
                android:textSize="@dimen/sp_15" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_comfir"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="确认删除"
                android:textColor="@color/color_1700F4"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

    </LinearLayout>
</layout>