<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_line_00095b_222b80"
        android:orientation="vertical"
        android:paddingTop="@dimen/statusbar_view_height">

        <include
            android:id="@+id/toolbar_jifen"
            layout="@layout/view_toolbar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/dp_120"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_jifen_num"
                style="@style/text_14_color_00_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="333"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_23" />

            <TextView
                style="@style/text_14_color_00_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_top_r_5_c_ff">

            <include
                android:id="@+id/rcy_jifen"
                layout="@layout/view_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_17" />

        </RelativeLayout>
    </LinearLayout>
</layout>