<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <TextView
        android:id="@+id/state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_46"
        android:text="审核状态"
        android:textColor="#141C26"
        android:textSize="@dimen/text_size_mid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/auth_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:gravity="right|center_vertical"
        android:minHeight="@dimen/dp_46"
        android:text="待认证"
        android:textColor="#00095B"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/state_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/state_title" />


    <TextView
        android:id="@+id/auth_reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray1_bg"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_48"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:text="待认证"
        android:textColor="#666666"
        android:textSize="@dimen/sp_13"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/state_title"
        app:layout_constraintRight_toRightOf="@+id/auth_status"
        app:layout_constraintTop_toBottomOf="@+id/auth_status" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_change_mobile"
        style="@style/login_btn_style"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="更换绑定关系"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auth_reason" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_mobile" />

</androidx.constraintlayout.widget.ConstraintLayout>