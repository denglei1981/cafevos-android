<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/im_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_login_top_bg" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/text_18_color_ff_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_33"
                android:text="绑定手机号" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_login_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_67"
                android:layout_marginTop="@dimen/dp_135"
                android:text="Hello， \n欢迎来到福域"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_25" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_240"
                android:background="@drawable/shape_top_r_5_c_ff">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_login_mobile"
                    style="@style/login_mobile_et_style"
                    android:layout_marginStart="@dimen/dp_47"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_47"
                    android:background="@drawable/edittext_bg"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_login_sms_code"
                    style="@style/login_mobile_et_style"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/dp_47"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/edittext_bg"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/btn_get_sms"
                    app:layout_constraintTop_toBottomOf="@+id/et_login_mobile" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_get_sms"
                    android:layout_width="@dimen/dp_102"
                    android:layout_height="@dimen/dp_34"
                    android:layout_marginEnd="@dimen/dp_47"
                    android:background="@drawable/shape_login_sms_r_16_c_89"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#1B3B89"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="@+id/et_login_sms_code"
                    app:layout_constraintLeft_toRightOf="@+id/et_login_sms_code"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/et_login_sms_code" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    style="@style/login_btn_style"
                    android:layout_marginStart="@dimen/dp_47"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_47"
                    android:text="立即绑定"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_login_sms_code" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_no_bind"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginStart="@dimen/dp_47"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_marginEnd="@dimen/dp_47"
                    android:text="暂不绑定"
                    android:textColor="#1B3B89"
                    android:textSize="@dimen/sp_15"
                    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="@dimen/dp_20"
                    app:layout_constraintTop_toBottomOf="@+id/btn_login"
                    app:strokeColor="#1B3B89"
                    app:strokeWidth="@dimen/dp_1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</layout>