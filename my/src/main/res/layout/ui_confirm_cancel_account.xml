<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/mine_toolbar"
            layout="@layout/view_toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:src="@mipmap/icon_confirm_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mine_toolbar" />


        <TextView
            android:id="@+id/phone_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:text="请用尾号5540登录的手机号\n获取验证码进行注销"
            android:textColor="#24292E"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_top" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="26dp"
            android:background="#F4F4F4"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_17"
            android:paddingEnd="@dimen/dp_17"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_hint" />

        <LinearLayout
            android:id="@+id/verify_sms_layout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#f4f4f4"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="@+id/phone"
            app:layout_constraintRight_toRightOf="@+id/phone"
            app:layout_constraintTop_toBottomOf="@+id/phone">

            <EditText
                android:id="@+id/verify_sms"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="17dp"
                android:textColor="#BBBBBB"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/get_verify_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:background="@drawable/shape_login_sms_r_16_c_89"
                android:gravity="center"
                android:minWidth="@dimen/dp_102"
                android:minHeight="34dp"
                android:text="获取验证码"
                android:textColor="#1B3B89"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="确认注销后，账号将无法恢复，请慎重！"
            android:textColor="#E72222"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/phone"
            app:layout_constraintTop_toBottomOf="@+id/verify_sms_layout" />


        <TextView
            android:id="@+id/confirm_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/shape_r_23_c_5c_"
            android:gravity="center"
            android:text="确认注销"
            android:textColor="#01025C"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/phone"
            app:layout_constraintRight_toLeftOf="@+id/cancel_btn"
            app:layout_constraintTop_toBottomOf="@+id/hint" />


        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/shape_c_5c_r_23"
            android:gravity="center"
            android:text="取消注销申请"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/confirm_cancel_btn"
            app:layout_constraintLeft_toRightOf="@+id/confirm_cancel_btn"
            app:layout_constraintRight_toRightOf="@+id/phone"
            app:layout_constraintTop_toTopOf="@+id/confirm_cancel_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>