<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/car_toolbar"
        layout="@layout/view_toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/car_model_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2000095B"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_24"
        android:paddingStart="@dimen/dp_29"
        android:text="*仅支持FORD EVOS车主认证"
        android:textColor="#00095B"
        android:textSize="@dimen/sp_13" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/auth_status_layout"
                layout="@layout/include_car_auth_status" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#EEEEEE"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/dp_46"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/mobile_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号码"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_13" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:hint="请输入手机号"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:text=""
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#EEEEEE" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="上传证件"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="*福域APP不会通过任何渠道泄露您的个人信息，请放心填写。 \n*上传的图片请保证文字清晰可见，无反光。 \n*上传的资料信息请与购车经销商登记资料一致。"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <include
                    android:id="@+id/include_idcard_layout"
                    layout="@layout/include_car_auth_idcard" />

                <include
                    android:id="@+id/idcard_input_layout"
                    layout="@layout/inclube_car_auth_inpunt_idcard"
                    android:visibility="gone" />

                <include
                    android:id="@+id/include_driving_layout"
                    layout="@layout/include_car_auth_driving" />

                <include
                    android:id="@+id/vin_input_layout"
                    layout="@layout/inclube_car_auth_vin_inpunt"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/vin_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_6"
                android:background="#EEEEEE"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/check_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/auth_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/checkbox_auth_agree"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:text="我已阅读并同意"
                    android:background="@color/transparent"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《用户隐私协议》"
                    android:textColor="#00095B"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit"
                android:layout_marginBottom="@dimen/dp_15"
                style="@style/login_btn_style"
                android:layout_width="match_parent"
                android:text="提交信息" />

            <View
                android:id="@+id/line8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="#EEEEEE"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/car_qy_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginEnd="@dimen/dp_20"
                android:text="车主权益"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/car_qy_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="车主互动：车主可申请创建属于自己“圈内”的圈子，并可在长安福特发起专属活动。"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>