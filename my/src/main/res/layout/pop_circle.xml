<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_whit12_bg"
        android:gravity="center_horizontal"
        android:minWidth="@dimen/dp_285"
        android:minHeight="@dimen/dp_285"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="是否审核不通过？"
            android:textColor="@color/color_16"
            android:textSize="18sp" />

        <com.changanford.common.widget.RequiredTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="不通过类型:"
            android:textColor="@color/color_d916"
            android:textSize="@dimen/sp_14" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/circle_tag_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10" />

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bg_081700f4_12"
            android:gravity="top"
            android:hint="请输入原因"
            android:maxLength="150"
            android:minHeight="@dimen/dp_80"
            android:padding="@dimen/dp_8"
            android:textColor="@color/color_16"
            android:textColorHint="@color/color_4d16"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/border_0095b_20dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_1700f4"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/shape_00095b_20dp"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>