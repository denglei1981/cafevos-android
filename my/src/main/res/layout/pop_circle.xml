<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/pop_sign_bg"
        android:gravity="center_horizontal"
        android:minWidth="@dimen/dp_285"
        android:minHeight="@dimen/dp_285"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="审核是否不通过？"
            android:textColor="#081725"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="*不通过类型:"
            android:textColor="#081725"
            android:textSize="@dimen/sp_15" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/circle_tag_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10" />

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/shape_r_2_c_f6"
            android:gravity="top"
            android:hint="请输入原因"
            android:maxLength="150"
            android:minHeight="@dimen/dp_80"
            android:padding="@dimen/dp_8"
            android:textColor="#081725"
            android:textSize="@dimen/sp_12" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/btn_one_clear_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="#71747B"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/btn_one_clear_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="#01025C"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>