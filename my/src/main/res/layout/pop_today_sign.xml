<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/pop_sign_bg"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:text="签到成功"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/total_sign_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:text="您是今天第1位签到的用户"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_mid"
                android:visibility="gone" />

            <TextView
                android:id="@+id/sign_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="14dp"
                android:text="您已连续签到1天"
                android:textColor="#71747B"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sign_total_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="14dp"
                android:text="恭喜您获得1福币、1成长值"
                android:textColor="#71747B"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sign_acc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="当前奖励：1倍奖励"
                android:textColor="#71747B"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/twolayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:minWidth="310dp"
                android:layout_marginBottom="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <View
                    android:id="@+id/bg1"
                    android:layout_width="125dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/sign_send_sms_btn_bg"
                    android:gravity="center"
                    android:text="F币"
                    android:textColor="#01025C"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/bg2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="1" />

                <View
                    android:id="@+id/bg2"
                    android:layout_width="126dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/sign_send_sms_btn_bg"
                    android:gravity="center"
                    android:text="成长值"
                    android:textColor="#01025C"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@+id/bg1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/bg1"
                    app:layout_constraintVertical_weight="1" />

                <TextView
                    android:id="@+id/sign_jf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:gravity="center"
                    android:text="F币"
                    android:textColor="#01025C"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/imageView"
                    app:layout_constraintLeft_toRightOf="@id/imageView"
                    app:layout_constraintTop_toTopOf="@id/imageView"
                    app:layout_constraintVertical_weight="1" />

                <TextView
                    android:id="@+id/sign_czz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:gravity="center"
                    android:text="成长值"
                    android:textColor="#01025C"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/imageView"
                    app:layout_constraintLeft_toRightOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@id/imageView"
                    app:layout_constraintVertical_weight="1" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@+id/bg1"
                    app:layout_constraintStart_toStartOf="@+id/bg1"
                    app:layout_constraintTop_toTopOf="@+id/bg1"
                    app:srcCompat="@mipmap/icon_sign_ub" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="@+id/bg2"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    app:srcCompat="@mipmap/icon_sign_grow" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/onelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:minWidth="310dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/twolayout"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/bg3"
                    android:layout_width="0dp"
                    android:layout_height="86dp"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/sign_send_sms_btn_bg"
                    android:gravity="center"
                    android:text="F币"
                    android:textColor="#01025C"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="1" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    app:layout_constraintEnd_toEndOf="@id/bg3"
                    app:layout_constraintStart_toStartOf="@+id/bg3"
                    app:layout_constraintTop_toTopOf="@+id/bg3"
                    app:srcCompat="@mipmap/icon_sign_ub" />

                <TextView
                    android:id="@+id/sign_jf2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="福币 +1"
                    android:textColor="#071726"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/imageView3"
                    app:layout_constraintStart_toStartOf="@id/imageView3"
                    app:layout_constraintTop_toBottomOf="@id/imageView3"
                    app:layout_constraintVertical_weight="1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imglayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:minWidth="310dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/twolayout"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/bg4"
                    android:layout_width="0dp"
                    android:layout_height="86dp"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/sign_send_sms_btn_bg"
                    android:gravity="center"
                    android:text="F币"
                    android:textColor="#01025C"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="1" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_10"
                    app:layout_constraintEnd_toEndOf="@id/bg4"
                    app:layout_constraintStart_toStartOf="@+id/bg4"
                    app:layout_constraintTop_toTopOf="@+id/bg4"
                    app:srcCompat="@mipmap/icon_sign_ub" />

                <TextView
                    android:id="@+id/sign_jfe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="优惠券"
                    android:textColor="#071726"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/imageView4"
                    app:layout_constraintStart_toStartOf="@id/imageView4"
                    app:layout_constraintTop_toBottomOf="@id/imageView4"
                    app:layout_constraintVertical_weight="1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/sign_know"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_bt_blue_corner39"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                app:layout_constraintBottom_toTopOf="@+id/sign_to"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/sign_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="明日签到可得20F币, 20成长值"
                android:textColor="#B9B9B9"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </LinearLayout>
    </RelativeLayout>
</layout>