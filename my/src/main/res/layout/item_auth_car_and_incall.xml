<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/car_bg">

            <TextView
                android:id="@+id/car_vin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/auth_car_vin_bg"
                android:gravity="center"
                android:minWidth="178dp"
                android:minHeight="22dp"
                android:text="VIN码：FI24H9893J5H4K38S"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/car_pic"
                android:layout_width="173dp"
                android:layout_height="88dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="11dp"
                app:layout_constraintBottom_toTopOf="@+id/hint_layout"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="11dp"
                android:background="@drawable/car_status_bg"
                android:gravity="center"
                android:minWidth="48dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="认证成功"
                android:textColor="#071726"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/car_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:text="UNI-T"
                android:textColor="#182634"
                android:textSize="21sp"
                android:textStyle="italic|bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/car_vin" />

            <TextView
                android:id="@+id/car_num_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@mipmap/auth_car_and_incall_car_num_bg"
                android:gravity="center"
                android:text="添加车牌"
                android:textColor="#FC883B"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintLeft_toLeftOf="@+id/car_logo"
                app:layout_constraintTop_toBottomOf="@+id/car_logo" />


            <TextView
                android:id="@+id/open_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/set_head_case_pop_btn"
                android:drawableRight="@mipmap/icon_incall_arrow_r"
                android:drawablePadding="@dimen/dp_10"
                android:minWidth="91dp"
                android:minHeight="@dimen/dp_25"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_3"
                android:text="一键控车"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/car_num_card"
                app:layout_constraintTop_toBottomOf="@+id/car_num_card" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/open_call" />

            <LinearLayout
                android:id="@+id/hint_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/auth_car_hint_layout_bg"
                android:orientation="vertical"
                android:paddingStart="23dp"
                android:paddingTop="16dp"
                android:paddingEnd="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">

                <TextView
                    android:id="@+id/hint_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:text="车主认证资料过期，避免车主权益受限，请更新认证资料避免车主权益受限避免车主权益受限避免车主权益受限"
                    android:textColor="#626B74"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/hint_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC" />

                <TextView
                    android:id="@+id/hint_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:minHeight="46dp"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="更新资料"
                    android:textColor="#2E3A47"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/hint_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox"
            android:drawablePadding="4dp"
            android:text="设置默认展示车辆"
            android:textColor="#071726"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

</layout>