<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_14">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/dp_24"
            android:layout_height="wrap_content"
            android:button="@null"
            tools:visibility="visible"
            android:drawableLeft="@drawable/checkbox"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_12"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toRightOf="@+id/checkbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginLeft="@dimen/dp_0"
            app:shapeAppearanceOverlay="@style/circleImageStyle" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:ellipsize="end"
            android:enabled="true"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="我不是团团"
            android:textColor="@color/color_d916"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/item_icon"
            app:layout_constraintTop_toTopOf="@+id/item_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_11"
            android:background="@drawable/bg_261700f4_20"
            android:minWidth="@dimen/dp_30"
            android:paddingStart="@dimen/dp_6"
            android:paddingTop="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_6"
            tools:visibility="visible"
            android:paddingBottom="@dimen/dp_3"
            android:text="圈主"
            android:textColor="@color/color_1700f4"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/item_name"
            app:layout_constraintTop_toTopOf="@+id/item_name" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="申请时间：2020-04-09 14:24"
            android:textColor="@color/color_6616"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/item_name"
            app:layout_constraintTop_toBottomOf="@+id/item_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
