<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/main_rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_r_5_c_7000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@drawable/pop_sign_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="请填写车牌号"
                android:textColor="@color/color_33"
                android:textSize="@dimen/text_size_mid" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@color/color_ee" />

            <com.eaves.plate.PlateNumView
                android:id="@+id/activity_lpv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginEnd="@dimen/dp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_one_clear_bg"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#71747B"
                    android:textSize="@dimen/text_size_mid" />

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_one_clear_bg"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/color_1700f4"
                    android:textSize="@dimen/text_size_mid" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
