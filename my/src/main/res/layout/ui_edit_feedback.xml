<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/mine_toolbar"
            layout="@layout/view_toolbar" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <com.changanford.common.ui.SnowTextView
                    android:id="@+id/label_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:text="请选择意见标签"
                    android:textColor="#071726"
                    android:textSize="@dimen/text_size_mid"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/feedback_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label_title" />

                <View
                    android:id="@+id/line"
                    style="@style/line"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="14dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedback_rv" />

                <com.changanford.common.ui.SnowTextView
                    android:id="@+id/q_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="14dp"
                    android:text="问题描述"
                    android:textColor="#071726"
                    android:textSize="@dimen/text_size_mid"
                    app:layout_constraintLeft_toLeftOf="@id/label_title"
                    app:layout_constraintRight_toRightOf="@id/label_title"
                    app:layout_constraintTop_toBottomOf="@+id/line" />

                <EditText
                    android:id="@+id/feedback_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/edit_feedback_input_bg"
                    android:gravity="top"
                    android:hint="请输入问题详细描述，以便我们更快处理你的反馈（5-300字）"
                    android:maxLength="300"
                    android:minHeight="180dp"
                    android:padding="8dp"
                    android:textColor="@color/text_color_08"
                    android:textColorHint="#AFB3B6"
                    android:textSize="@dimen/text_size_mid"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/q_title" />

                <TextView
                    android:id="@+id/add_icon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="14dp"
                    android:text="上传图片"
                    android:textColor="@color/text_color_08"
                    android:textSize="@dimen/text_size_mid"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedback_input" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/feedback_pic_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_icon_title" />


                <TextView
                    android:id="@+id/add_contact_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="14dp"
                    android:text="联系方式"
                    android:textColor="@color/text_color_08"
                    android:textSize="@dimen/text_size_mid"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedback_pic_rv" />

                <EditText
                    android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/edit_feedback_input_bg"
                    android:hint="请输入您的姓名(必填)"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:textColor="@color/text_color_08"
                    android:textSize="@dimen/text_size_mid"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_contact_title" />


                <EditText
                    android:id="@+id/input_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/edit_feedback_input_bg"
                    android:hint="请输入您的电话(必填)"
                    android:maxLength="11"
                    android:paddingLeft="8dp"
                    android:textColor="@color/text_color_08"
                    android:textSize="@dimen/text_size_mid"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_name" />


                <TextView
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_bt_blue_corner39"
                    android:gravity="center"
                    android:text="提交反馈"
                    android:textColor="@color/color_withe"
                    android:textSize="@dimen/text_size_big"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_mobile" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>
