<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.changanford.common.ui.FullVideoView
            android:id="@+id/login_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/im_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_login_top_bg" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@mipmap/back_w" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/text_18_color_ff_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_33"
                    android:text="登录"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_login_hint"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_135"
                    android:text="Hello,欢迎来到福域"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_25" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_275">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_login_mobile"
                        style="@style/login_mobile_et_style"
                        android:layout_marginStart="@dimen/dp_47"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginEnd="@dimen/dp_47"
                        android:background="@drawable/et_input_r_20_c_f"
                        android:hint="请输入手机号码"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingStart="@dimen/dp_18"
                        android:textColor="#01025C"
                        android:textColorHint="#999999"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/ll_sms_layout"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_44"
                        android:layout_marginStart="@dimen/dp_47"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_47"
                        android:background="@drawable/et_input_r_20_c_f"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_login_mobile">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_login_sms_code"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_0"
                            android:layout_marginEnd="@dimen/dp_0"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="请输入验证码"
                            android:inputType="number"
                            android:maxLength="8"
                            android:paddingStart="@dimen/dp_18"
                            android:textColor="#01025C"
                            android:textColorHint="#999999"
                            android:textSize="@dimen/sp_14" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btn_get_sms"
                            android:layout_width="@dimen/dp_102"
                            android:layout_height="@dimen/dp_34"
                            android:layout_marginEnd="@dimen/dp_17"
                            android:gravity="center"
                            android:text="获取验证码"
                            android:textColor="@color/color_01025C"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>


                    <CheckBox
                        android:id="@+id/cb_ex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_52"
                        android:layout_marginTop="@dimen/dp_25"
                        android:button="@drawable/login_checkbox"
                        android:gravity="center"
                        android:padding="@dimen/dp_1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_sms_layout" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/sign_agreement"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_26"
                        android:layout_marginRight="@dimen/dp_52"
                        android:text="点击注册/登录，即表示已阅读并同意《用户隐私条 款》、《福域注册会员服务条款》"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        app:layout_constraintLeft_toRightOf="@+id/cb_ex"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_sms_layout" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_42"
                        android:layout_marginStart="@dimen/dp_47"
                        android:layout_marginTop="@dimen/dp_26"
                        android:layout_marginEnd="@dimen/dp_47"
                        android:background="@drawable/shape_r_20_c_ff"
                        android:gravity="center"
                        android:text="登录/注册"
                        android:textColor="#01025C"
                        android:textSize="@dimen/sp_15"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sign_agreement" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="未注册用户登录后自动注册"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_login" />


                    <LinearLayout
                        android:id="@+id/ll_line_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_52"
                        android:layout_marginTop="@dimen/dp_36"
                        android:layout_marginEnd="@dimen/dp_52"
                        android:gravity="center_vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_hint">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_weight="1"
                            android:background="@color/white" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/text_14_color_00_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:text="你还可以用以下方式登录"
                            android:textColor="@color/white" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_weight="1"
                            android:background="@color/white" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/im_qq_login"
                        android:layout_width="@dimen/dp_54"
                        android:layout_height="@dimen/dp_54"
                        android:layout_marginTop="@dimen/dp_25"
                        android:gravity="center"
                        android:src="@mipmap/ic_login_qq"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/im_weixin_login"
                        app:layout_constraintTop_toBottomOf="@+id/ll_line_layout" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/im_weixin_login"
                        android:layout_width="@dimen/dp_54"
                        android:layout_height="@dimen/dp_54"
                        android:layout_marginTop="@dimen/dp_25"
                        android:gravity="center"
                        android:src="@mipmap/ic_login_wx"
                        app:layout_constraintLeft_toRightOf="@+id/im_qq_login"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_line_layout" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</layout>