<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginEnd="@dimen/dp_45"
        android:background="@drawable/pop_sign_bg"
        android:minHeight="@dimen/dp_227">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:text="更改绑定关系"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_18"
            android:gravity="left"
            android:lineSpacingMultiplier="1.1"
            android:text="您即将用当前手机号码替换xxx****xxx与该身份及车辆进行绑定。请确认是否继续往下操作？"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@color/color_ee"
            app:layout_constraintTop_toBottomOf="@+id/content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/get_sms_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_13"
            android:text="是否能获取原手机验证码"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

        <CheckBox
            android:id="@+id/check_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_13"
            android:button="@drawable/checkbox_auth_pop"
            android:checked="true"
            android:padding="@dimen/dp_2"
            android:text="是"
            android:textColor="@color/color_33"
            android:textSize="@dimen/dp_12"
            app:layout_constraintLeft_toRightOf="@+id/get_sms_hint"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

        <CheckBox
            android:id="@+id/check_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:button="@drawable/checkbox_auth_pop"
            android:padding="@dimen/dp_2"
            android:text="否"
            android:textColor="@color/color_33"
            android:textSize="@dimen/dp_12"
            app:layout_constraintLeft_toRightOf="@+id/check_true"
            app:layout_constraintTop_toTopOf="@+id/check_true" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ee"
            app:layout_constraintTop_toBottomOf="@+id/get_sms_hint" />


        <LinearLayout
            android:id="@+id/mobile_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginEnd="@dimen/dp_11"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line2">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原手机号："
                android:textColor="@color/color_66"
                android:textSize="@dimen/dp_13" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:textColor="@color/color_33"
                android:textSize="@dimen/dp_13" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_get_sms"
                android:layout_width="@dimen/dp_82"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/shape_c_2e_r_12"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_1700f4"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ee"
            app:layout_constraintTop_toBottomOf="@+id/mobile_layout" />


        <LinearLayout
            android:id="@+id/sms_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginEnd="@dimen/dp_11"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line3">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码："
                android:textColor="@color/color_66"
                android:textSize="@dimen/dp_13" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_login_sms_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_0"
                android:layout_marginEnd="@dimen/dp_0"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/color_33"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ee"
            app:layout_constraintTop_toBottomOf="@+id/sms_layout" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="mobile_layout,line3,sms_layout,line4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line4">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/btn_one_clear_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="#71747B"
                android:textSize="@dimen/text_size_mid" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/btn_one_clear_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_1700f4"
                android:textSize="@dimen/text_size_mid" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>