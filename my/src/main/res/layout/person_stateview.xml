<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/fans_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/fans_num"
            style="@style/commonTextView.Medium.Black"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="0"
            app:layout_constraintLeft_toLeftOf="@+id/fans" />

        <TextView
            android:id="@+id/fans"
            style="@style/commonTextView.Small.LightBlue"
            android:layout_width="match_parent"
            android:layout_below="@+id/fans_num"
            android:gravity="center"
            android:text="粉丝" />

    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_29"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:id="@+id/follow_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/follow_num"
            style="@style/commonTextView.Medium.Black"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="0" />

        <TextView
            android:id="@+id/follow"
            style="@style/commonTextView.Small.LightBlue"
            android:layout_width="match_parent"
            android:layout_below="@+id/follow_num"
            android:gravity="center"
            android:text="关注" />

    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_29"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:id="@+id/good_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/good_num"
            style="@style/commonTextView.Medium.Black"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="0" />

        <TextView
            android:id="@+id/good"
            style="@style/commonTextView.Small.LightBlue"
            android:layout_width="match_parent"
            android:layout_below="@+id/good_num"
            android:gravity="center"
            android:text="获赞数" />

    </RelativeLayout>
</LinearLayout>