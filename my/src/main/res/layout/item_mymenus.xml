<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mytoollayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/toolImg"
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/my_daysign" />

    <TextView
        android:id="@+id/toolName"
        style="@style/commonTextView.Small.Black"
        android:layout_marginStart="20dp"
        tools:text="我的订单"
        app:layout_constraintBottom_toBottomOf="@+id/toolImg"
        app:layout_constraintStart_toEndOf="@+id/toolImg"
        app:layout_constraintTop_toTopOf="@+id/toolImg" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_10"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/my_rightarrow" />
</androidx.constraintlayout.widget.ConstraintLayout>