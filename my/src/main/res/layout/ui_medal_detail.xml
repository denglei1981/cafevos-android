<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_medal_detail_bg">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/back_w"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:banner_indicator_normal_color="#22E9EBF1"
            app:banner_indicator_normal_width="@dimen/dp_6"
            app:banner_indicator_radius="@dimen/dp_8"
            app:banner_indicator_selected_color="#E9EBF1"
            app:banner_indicator_selected_width="@dimen/dp_8"
            app:layout_collapseMode="parallax"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back" />

        <RelativeLayout
            android:id="@+id/v_one"
            android:layout_width="32dp"
            android:layout_height="105dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="66dp"
            android:background="@drawable/bg_3300_6_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="11dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/back_w" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/v_two"
            android:layout_width="32dp"
            android:layout_height="105dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="66dp"
            android:background="@drawable/bg_3300_6_bg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="11dp"
                android:layout_height="16dp"
                android:rotation="180"
                android:layout_centerInParent="true"
                android:src="@mipmap/back_w" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/indicator_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner">

            <com.youth.banner.indicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_get_medal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_26"
            android:background="@drawable/shape_r_20_c_ff"
            android:gravity="center"
            android:text="立即点亮"
            android:textColor="#01025C"
            android:textSize="@dimen/sp_15"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:src="@mipmap/ic_medel_logo"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <!--        <androidx.appcompat.widget.AppCompatTextView-->
        <!--            android:id="@+id/nick_name"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginEnd="@dimen/dp_24"-->
        <!--            android:layout_marginBottom="@dimen/dp_24"-->
        <!--            android:textColor="#50ffffff"-->
        <!--            android:textSize="@dimen/sp_11"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent" />-->

        <TextView
            android:id="@+id/tv_con_title"
            style="@style/text_14_color_00_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="勋章获得条件"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toTopOf="@+id/tv_con"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_con"
            style="@style/text_14_color_00_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toTopOf="@+id/tv_page_position"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="通过手机号码验证, 完成注册登录即可" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_page_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="12/90" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>