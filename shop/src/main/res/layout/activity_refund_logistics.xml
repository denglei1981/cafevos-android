<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <com.changanford.shop.view.TopBar
            android:id="@+id/layout_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:right_icon="@mipmap/ic_order_d_back"
            app:title_text="填写物流" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_top">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_logistics_company_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@null"
                android:text="物流公司"
                android:textColor="@color/color_9916"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="物流公司" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_logistics_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="请填写"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/color_d916"
                android:textColorHint="@color/color_4d16"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_logistics_company_tips"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_logistics_company_tips"
                app:layout_constraintTop_toTopOf="@+id/tv_logistics_company_tips" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_logistics_num_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:maxLength="50"
                android:maxLines="1"
                android:text="物流单号"
                android:textColor="@color/color_9916"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_logistics_company_tips"
                tools:text="物流单号" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_logistics_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="请填写"
                android:textColor="@color/color_d916"
                android:textColorHint="@color/color_4d16"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_logistics_num_tips"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_logistics_num_tips"
                app:layout_constraintTop_toTopOf="@+id/tv_logistics_num_tips" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/ll_refund_notes"
            layout="@layout/layout_refund_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/con_info" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_handle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="40dp"
            android:layout_marginTop="73dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@drawable/bg_shape_80a6_23"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/color_8016"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>