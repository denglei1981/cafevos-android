<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_tk_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        android:text="退款信息"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/color_d916"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="退款信息" />

    <include
        android:id="@+id/layout_shop"
        app:layout_constraintTop_toBottomOf="@+id/tv_tk_top"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        layout="@layout/layout_item_refund_num" />
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_refund_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_shop"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_goneMarginTop="24dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_refund_num_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款编号"
            android:textColor="@color/color_8016"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="退款编号" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_reason_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:drawablePadding="8dp"
            android:gravity="end|center_vertical"
            android:textColor="@color/color_d916"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_refund_num_tips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_refund_num_tips"
            app:layout_constraintTop_toTopOf="@+id/tv_refund_num_tips"
            tools:text="0000000000" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_refund_type_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="退款类型"
            android:textColor="@color/color_8016"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_refund_num_tips"
            tools:text="退款类型" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_refund_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="12"
            android:textColor="@color/color_d916"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_refund_type_tips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_refund_type_tips" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_refund_reson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="退款原因"
            android:textColor="@color/color_8016"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_refund_type_tips"
            tools:text="退款原因" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_reson_show"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:drawablePadding="8dp"
            android:gravity="end|center_vertical"
            android:textColor="@color/color_d916"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_refund_reson"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_refund_reson"
            app:layout_constraintTop_toTopOf="@+id/tv_refund_reson"
            tools:text="3000" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_refund_money_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="申请金额"
            android:textColor="@color/color_8016"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_refund_reson"
            tools:text="申请金额" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_refund_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:drawablePadding="8dp"
            android:gravity="end|center_vertical"
            android:textColor="@color/color_d916"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_refund_money_tips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_refund_money_tips"
            app:layout_constraintTop_toTopOf="@+id/tv_refund_money_tips"
            tools:text="自行寄回" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>