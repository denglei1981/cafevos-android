<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_9"
        android:id="@+id/layout_header"
        android:background="#fcffffff">
        <ImageView
            android:onClick="onClick"
            android:id="@+id/img_back"
            android:padding="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_16"
            android:background="@drawable/garden_1a000000"
            android:src="@mipmap/shop_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabLayout
            app:tabBackground="@null"
            app:tabRippleColor="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_back"
            app:layout_constraintEnd_toStartOf="@id/img_collection"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tab_layout"
            app:tabMode="auto"
            app:tabTextAppearance="@style/style_indexTabItemStyle0"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabSelectedTextColor="@color/color_00095B"
            app:tabTextColor="@color/color_33"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorHeight="@dimen/dp_0"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:onClick="onClick"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/garden_1a000000"
            android:id="@+id/img_collection"
            android:padding="@dimen/dp_4"
            app:layout_constraintEnd_toStartOf="@id/img_share"
            android:src="@mipmap/shop_collect_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:onClick="onClick"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/garden_1a000000"
            android:padding="@dimen/dp_4"
            android:id="@+id/img_share"
            android:src="@mipmap/shop_share"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>