<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcffffff"
        android:paddingTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_9">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:onClick="onClick"
            android:padding="@dimen/dp_4"
            android:src="@mipmap/shop_back_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_collection"
            app:layout_constraintStart_toEndOf="@id/img_back"
            app:layout_constraintTop_toTopOf="parent"
            app:tabBackground="@null"
            app:tabIndicator="@drawable/shape_shop_delete_tab_indicator"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorHeight="@dimen/dp_3"
            app:tabMaxWidth="@dimen/dp_200"
            app:tabMinWidth="@dimen/dp_20"
            app:tabMode="auto"
            app:tabPaddingBottom="2dp"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/color_1700f4"
            app:tabTextAppearance="@style/style_indexTabItemStyle14"
            app:tabTextColor="@color/color_9916" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:onClick="onClick"
            android:padding="@dimen/dp_4"
            android:src="@mipmap/shop_collect_0_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_share"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:onClick="onClick"
            android:padding="@dimen/dp_4"
            android:src="@mipmap/shop_share_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>