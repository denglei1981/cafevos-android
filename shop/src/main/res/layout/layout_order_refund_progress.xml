<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_refund_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_white_t_5dp"

        android:paddingTop="@dimen/dp_18"
        android:visibility="gone"
        tools:visibility="visible">


        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/text_colorv6"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toTopOf="@+id/v_line"
            app:layout_constraintEnd_toStartOf="@id/tv_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="重庆市渝中区李子坝正街156号长帆江岸公馆2号楼" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableEnd="@mipmap/shop_right"
            android:drawablePadding="@dimen/dp_2"

            android:textColor="@color/color_00095B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_tips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_line"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="18dp"
            android:background="@color/color_F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_tips" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>