<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.changanford.common.bean.GoodsDetailBean" />
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/BannerDefaultStyle"
            app:banner_isNumberIndicator="false"
            app:banner_pointAutoPlayAble="false"
            app:banner_indicatorGravity="bottom|center_horizontal"
            app:banner_pointDrawable="@null"
            app:banner_aspectRatio="1"/>
        <!-- 商品秒杀信息           -->
        <include
            android:id="@+id/inKill"
            layout="@layout/in_goods_details_kill"/>
        <!-- 会员专享    会员折扣   -->
        <include
            android:id="@+id/in_vip"
            layout="@layout/in_goods_detsils_vip"/>
        <!-- 会员折扣    -->
<!--        <include-->
<!--            android:id="@+id/in_discount"-->
<!--            android:layout_marginTop="@dimen/dp_9"-->
<!--            android:layout_marginStart="@dimen/dp_20"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_width="wrap_content"-->
<!--            layout="@layout/in_goods_vip"/>-->
        <!-- 商品基本信息           -->
        <include
            android:id="@+id/in_goodsInfo"
            layout="@layout/in_goods_details_info"/>
        <View
            android:id="@+id/view_comment"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <!-- 商品评价           -->
        <include
            android:id="@+id/inComment"
            layout="@layout/in_goods_details_comment"/>
        <View
            android:background="@color/color_F4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>
        <!-- 商品详情           -->
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_goodsDetails_title"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_goodsDetails"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_15" />
        <WebView
            android:id="@+id/webview"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/composeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>