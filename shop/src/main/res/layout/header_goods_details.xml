<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.changanford.common.bean.GoodsDetailBean" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/banner"
            style="@style/BannerDefaultStyle"
            android:layout_width="match_parent"
            app:banner_aspectRatio="1"
            app:banner_indicatorGravity="bottom|center_horizontal"
            app:banner_isNumberIndicator="false"
            app:banner_pointAutoPlayAble="false"
            app:banner_pointDrawable="@drawable/indicator_style0"
            app:banner_pointLeftRightMargin="@dimen/dp_4"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- 商品秒杀信息           -->
        <include
            android:id="@+id/inKill"
            layout="@layout/in_goods_details_kill" />
        <!-- 会员专享    会员折扣   -->
        <include
            android:id="@+id/in_vip"
            layout="@layout/in_goods_detsils_vip" />
        <!-- 会员折扣    -->
        <!--        <include-->
        <!--            android:id="@+id/in_discount"-->
        <!--            android:layout_marginTop="@dimen/dp_9"-->
        <!--            android:layout_marginStart="@dimen/dp_20"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            layout="@layout/in_goods_vip"/>-->
        <!-- 商品基本信息           -->
        <include
            android:id="@+id/in_goodsInfo"
            layout="@layout/in_goods_details_info" />

        <View
            android:id="@+id/view_comment"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <!-- 商品评价           -->
        <include
            android:id="@+id/inComment"
            layout="@layout/in_goods_details_comment" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_F4" />
        <!-- 商品详情           -->
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_goodsDetails_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="@string/str_goodsDetails"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/compose_service_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/composeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>