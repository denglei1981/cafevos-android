<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_scrollFlags="scroll"
            tools:background="@color/color_f6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.youth.banner.Banner
                android:layout_margin="@dimen/dp_20"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/banner"
                android:background="@drawable/shadow_1b51d9_5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                app:banner_indicator_height="@dimen/dp_5"
                app:banner_indicator_marginBottom="@dimen/dp_13"
                app:banner_indicator_normal_color="@color/white"
                app:banner_indicator_normal_width="@dimen/dp_5"
                app:banner_indicator_radius="@dimen/dp_8"
                app:banner_indicator_selected_color="#FFAC29"
                app:banner_indicator_selected_width="@dimen/dp_15"
                app:banner_indicator_space="@dimen/dp_10"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />
            <com.changanford.shop.view.TypefaceTextView
                android:id="@+id/tvKillTitle"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginStart="@dimen/dp_20"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/color_0F1524"
                android:textStyle="bold"
                android:text="@string/str_limitedTimeSecondsKill"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.changanford.shop.view.TypefaceTextView
                android:drawablePadding="@dimen/dp_7"
                app:drawableEndCompat="@mipmap/shop_right0"
                android:id="@+id/tv_shopMoreKill"
                android:paddingEnd="@dimen/dp_20"
                android:textColor="@color/color_74889D"
                android:text="@string/str_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tvKillTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvKillTitle"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"/>
            <com.changanford.shop.view.shadow.ShadowLayout
                app:shadowRadius="@dimen/dp_5"
                app:shadowColor="@color/color_122D384C"
                app:bgColor="@color/white"
                app:xOffset="@dimen/dp_0"
                app:yOffset="@dimen/dp_0"
                app:blurRadius="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_109"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/recyclerView"
                android:orientation="horizontal">
                <com.changanford.shop.view.TypefaceTextView
                    android:drawablePadding="@dimen/dp_9"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/color_0A0A0C"
                    android:text="@string/str_earnPointsMoreGifts"
                    app:drawableStartCompat="@mipmap/shop_getintegral" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_toIntegral"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/btn_selector"
                    android:paddingStart="@dimen/dp_14"
                    android:paddingEnd="@dimen/dp_14"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/str_immediatelyTo"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_32"/>
            </com.changanford.shop.view.shadow.ShadowLayout>
            <Button
                android:layout_margin="@dimen/dp_20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/btn_jfmx"
                android:text="积分明细"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_margin="@dimen/dp_20"
                app:layout_constraintTop_toBottomOf="@id/btn_jfmx"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/btn_pj"
                android:text="订单评价"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_margin="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_pj"
                android:id="@+id/btn_ordersGoods"
                android:text="商品订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>