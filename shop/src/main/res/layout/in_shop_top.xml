<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.youth.banner.Banner
            android:layout_margin="@dimen/dp_16"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/banner"
            android:background="@drawable/shape_c9_radius_15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_350"
            app:banner_indicator_height="@dimen/dp_5"
            app:banner_indicator_marginBottom="@dimen/dp_13"
            app:banner_indicator_normal_color="@color/white"
            app:banner_indicator_normal_width="@dimen/dp_5"
            app:banner_indicator_radius="@dimen/dp_8"
            app:banner_indicator_selected_color="#FFAC29"
            app:banner_indicator_selected_width="@dimen/dp_15"
            app:banner_indicator_space="@dimen/dp_10"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.7" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvKillTitle"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_16"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_33"
            android:textStyle="bold"
            android:text="@string/str_limitedTimeSecondsKill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_shopMoreKill"
            android:paddingEnd="@dimen/dp_16"
            android:textColor="@color/color_99"
            android:text="@string/str_more"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/tv_shopMoreKill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>