<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_30"
        app:layout_scrollFlags="scroll"
        tools:background="@color/color_f6">

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/banner"
            style="@style/BannerDefaultStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:banner_pointTopBottomMargin="@dimen/dp_20"
            app:banner_aspectRatio="1.04"
            app:banner_indicatorGravity="bottom|center_horizontal"
            app:banner_pointContainerLeftRightPadding="@dimen/dp_23"
            app:layout_constraintDimensionRatio="375:360"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/banner"
            android:src="@mipmap/ic_shop_top_bg"
            android:layout_height="120dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_fb"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_081700f4_12"
            app:layout_constraintTop_toBottomOf="@id/banner">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:text="福币在手 精品我有"
                    android:textColor="@color/color_16"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_my_fb"
                    android:layout_width="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="tb_fb,iv_fb,tv_fb_num"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tb_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我的福币:"
                    android:textColor="@color/color_9916"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_tips"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tips" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_fb"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/ic_shop_fb"
                    app:layout_constraintBottom_toBottomOf="@+id/tb_fb"
                    app:layout_constraintLeft_toRightOf="@+id/tb_fb"
                    app:layout_constraintTop_toTopOf="@+id/tb_fb" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_fb_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    tools:text="123"
                    android:textColor="@color/color_c19f68"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_fb"
                    app:layout_constraintLeft_toRightOf="@+id/iv_fb"
                    app:layout_constraintTop_toTopOf="@+id/iv_fb" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_right_tips"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_1700f4_18"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="做任务 赚福币" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tvKillTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_38"
            android:paddingStart="@dimen/dp_20"
            android:text="@string/str_limitedTimeSecondsKill"
            android:textColor="@color/color_0F1524"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_fb"
            tools:visibility="visible" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_shopMoreKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_7"
            android:paddingEnd="@dimen/dp_20"
            android:text="@string/str_more"
            android:textColor="@color/color_74889D"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:drawableEndCompat="@mipmap/shop_right0"
            app:layout_constraintBottom_toBottomOf="@id/tvKillTitle"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tvKillTitle"
            tools:listitem="@layout/item_kill_goods" />

        <com.changanford.common.ui.view.WTextView
            android:id="@+id/tv_recommendList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/str_recommendedList"
            android:textColor="@color/color_34"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerView"
            tools:visibility="visible" />

        <com.changanford.common.ui.view.WTextView
            android:id="@+id/tv_allList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableEnd="@mipmap/right_74889d"
            android:drawablePadding="@dimen/dp_5"
            android:text="@string/str_more"
            android:textColor="@color/color_74889D"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_recommendList"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tv_recommendList"
            tools:itemCount="2"
            tools:listitem="@layout/item_home_recommend_list1"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>