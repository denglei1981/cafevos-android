<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_scrollFlags="scroll"
            tools:background="@color/color_f6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/sp_30">
            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                style="@style/BannerDefaultStyle"
                app:banner_indicatorGravity="bottom|left"
                app:banner_pointTopBottomMargin="@dimen/dp_20"
                app:banner_pointContainerLeftRightPadding="@dimen/dp_23"
                app:banner_aspectRatio="1.67"/>
            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/compose"
                app:layout_constraintTop_toBottomOf="@id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.changanford.shop.view.TypefaceTextView
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/tvKillTitle"
                android:layout_marginTop="@dimen/dp_38"
                android:paddingStart="@dimen/dp_20"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/color_0F1524"
                android:textStyle="bold"
                android:text="@string/str_limitedTimeSecondsKill"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/compose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.changanford.shop.view.TypefaceTextView
                tools:visibility="visible"
                android:visibility="gone"
                android:drawablePadding="@dimen/dp_7"
                app:drawableEndCompat="@mipmap/shop_right0"
                android:id="@+id/tv_shopMoreKill"
                android:paddingEnd="@dimen/dp_20"
                android:textColor="@color/color_74889D"
                android:text="@string/str_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tvKillTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvKillTitle"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/item_kill_goods"/>
            <com.changanford.common.ui.view.WTextView
                android:visibility="visible"
                tools:visibility="visible"
                android:id="@+id/tv_recommendList"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_recommendedList"
                android:textColor="@color/color_34"
                android:textSize="@dimen/sp_16" />
            <com.changanford.common.ui.view.WTextView
                android:visibility="visible"
                tools:visibility="visible"
                android:drawablePadding="@dimen/dp_5"
                android:id="@+id/tv_allList"
                android:layout_marginEnd="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_recommendList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_all"
                android:textColor="@color/color_74889D"
                android:textSize="@dimen/sp_14"
                android:drawableEnd="@mipmap/right_74889d"/>
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="visible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/tv_recommendList"
                android:id="@+id/recyclerView_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:itemCount="2"
                tools:listitem="@layout/item_home_recommend_list1"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_15"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>