        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_goodsTitle"
            style="@style/style_txt_ellipsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:text="@{model.spuName}"
            android:textColor="@color/color_16"
            android:textSize="@dimen/sp_14"
            tools:text="TitleTitleTitle" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_second_name"
            style="@style/style_txt_ellipsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/color_d916"
            android:textSize="@dimen/sp_12"
            tools:text="抽绳双肩包" />
