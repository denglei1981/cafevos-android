            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6">

            <com.changanford.shop.view.TypefaceTextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.rmbPrice}"
                android:textColor="@color/color_1700f4"
                android:textSize="@dimen/sp_14"
                app:start_txt="@string/str_rmb"
                tools:text="￥100" />

            <com.changanford.common.ui.view.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_2"
                android:text="@string/str_since"
                android:textColor="@color/color_1700f4"
                android:textSize="@dimen/sp_9" />

            <com.changanford.common.ui.view.WTextView
                android:id="@+id/tv_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{model.getSales()}"
                android:textColor="@color/color_4d16"
                android:textSize="@dimen/sp_11"
