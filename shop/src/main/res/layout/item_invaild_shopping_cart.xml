<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.changanford.common.bean.GoodsDetailBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/dp_138"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_36"
        android:paddingEnd="@dimen/dp_20"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/check_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_shopping_car_cant_choice"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_6"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_goodsCover"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:scaleType="centerCrop"
            android:src="@mipmap/image_h_one_default"
            app:layout_constraintStart_toEndOf="@+id/check_status"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/rounded5ImageStyle" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_goodsTitle"
            style="@style/style_txt_ellipsize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_11"
            android:text="@{model.spuName}"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/img_goodsCover"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="无线蓝牙耳机 降噪耳机全新苹…" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_goods_property"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_goodsTitle"
            app:layout_constraintTop_toBottomOf="@id/tv_goodsTitle"
            tools:listitem="@layout/item_attribute" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_3"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_14"
            android:text="该商品不能购买"
            app:layout_constraintBottom_toBottomOf="@id/img_goodsCover"
            app:layout_constraintStart_toStartOf="@id/tv_goodsTitle" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/color_74889D"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_integral"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="24dp"
            android:background="@color/color_F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/img_goodsCover"
            app:layout_constraintTop_toBottomOf="@+id/img_goodsCover" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>