<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_33"
        android:paddingTop="@dimen/dp_7"
        android:paddingStart="@dimen/dp_10"
        android:background="@color/color_withe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <CheckBox
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/style_cb_collection"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:id="@+id/cb_collect"
            android:text="@string/str_collection" />
        <View
            android:id="@+id/view_collect"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="@id/cb_collect"
            app:layout_constraintTop_toTopOf="@id/cb_collect"
            app:layout_constraintEnd_toEndOf="@id/cb_collect"
            app:layout_constraintStart_toStartOf="@id/cb_collect"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <com.changanford.common.ui.view.WTextView
            android:onClick="onClick"
            app:layout_constraintStart_toEndOf="@id/cb_collect"
            app:layout_constraintTop_toTopOf="@id/cb_collect"
            android:id="@+id/tv_customerService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_customerService"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_shop_customer_service"/>
        <com.changanford.common.ui.view.WTextView
            android:onClick="onClick"
            app:layout_constraintStart_toEndOf="@id/tv_customerService"
            app:layout_constraintTop_toTopOf="@id/cb_collect"
            android:id="@+id/tv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_shoppingCart"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_shop_shop_cart"/>
        <com.changanford.common.ui.view.WTextView
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="@id/tv_cart"
            app:layout_constraintStart_toStartOf="@id/tv_cart"
            app:layout_constraintEnd_toEndOf="@id/tv_cart"
            android:layout_marginStart="@dimen/dp_20"
            android:id="@+id/tv_cart_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_13"
            android:minWidth="@dimen/dp_13"
            android:gravity="center"
            android:background="@drawable/shape_f21c44_50dp"
            android:textStyle="bold"
            android:paddingStart="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_3"
            tools:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_9"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_cart"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <com.changanford.shop.view.btn.KillBtnView
                android:onClick="onClick"
                android:layout_marginEnd="@dimen/dp_m_1"
                android:id="@+id/btn_cart"
                android:background="@drawable/border1dp_round_l20dp_00095b"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_buy"
                app:layout_constraintStart_toEndOf="@id/tv_cart"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_1700f4"
                android:gravity="center"
                android:text="@string/str_addShoppingCart"
                android:minWidth="@dimen/dp_100"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"/>
            <com.changanford.shop.view.btn.KillBtnView
                android:onClick="onClick"
                android:id="@+id/btn_buy"
                android:background="@drawable/shape_00095b_r20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_cart"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/str_immediatelyChange"
                android:minWidth="@dimen/dp_100"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

