<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_33"
        android:paddingTop="@dimen/dp_7"
        android:background="@color/color_withe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/text_colorv6"
            android:id="@+id/tv_collect"
            android:drawablePadding="@dimen/dp_5"
            android:text="@string/str_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableTopCompat="@drawable/ic_baseline_star_border_24" />
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/btn_selector"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/str_immediatelyChange"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"/>
    </LinearLayout>
</layout>