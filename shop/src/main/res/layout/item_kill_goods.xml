<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.changanford.common.bean.GoodsItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_shop"
        android:paddingBottom="10dp"
        android:layout_width="164dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_bord_1a4a_1"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_165"
                android:scaleType="centerCrop"
                android:src="@mipmap/image_h_one_default" />

            <com.changanford.shop.view.TypefaceTextView
                android:id="@+id/tvGoodsItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_11"
                android:paddingEnd="@dimen/dp_11"
                android:singleLine="true"
                android:text="@{model.spuName}"
                android:textColor="@color/color_16"
                android:textSize="@dimen/sp_14"
                tools:text="@string/str_text" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_3"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_11">

                <com.changanford.shop.view.TypefaceTextView
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.rmbPrice}"
                    android:textColor="@color/color_1700f4"
                    android:textSize="14sp"
                    app:start_txt="@string/str_rmb" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_change_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:gravity="right"
                    tools:text="asdsad"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_4d16"
                    android:textSize="@dimen/sp_10" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/pb_task"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_6"
                    android:layout_weight="1"
                    android:max="@{model.seckillStock}"
                    android:progress="@{model.sekillCount}"
                    android:progressDrawable="@drawable/progressbar_bg"
                    tools:progress="10" />

                <com.changanford.shop.view.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:inputType="none"
                    android:text="@{model.robbedPercentage}"
                    android:textColor="@color/color_4d16"
                    android:textSize="@dimen/sp_9"
                    tools:text="10%" />
            </androidx.appcompat.widget.LinearLayoutCompat>

<!--            <com.changanford.shop.view.TypefaceTextView-->
<!--                android:id="@+id/tv_seckillNumLimit"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="@dimen/dp_9"-->
<!--                android:layout_marginBottom="@dimen/dp_11"-->
<!--                android:paddingStart="@dimen/dp_11"-->
<!--                android:text="@{model.seckillStock}"-->
<!--                android:textColor="@color/color_74889D"-->
<!--                android:textSize="@dimen/sp_11"-->
<!--                app:end_txt="@string/str_a"-->
<!--                app:start_txt="@string/str_limited" />-->
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_type"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>