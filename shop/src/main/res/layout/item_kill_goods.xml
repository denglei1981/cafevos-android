<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.changanford.shop.bean.GoodsBean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_180"
        android:layout_height="wrap_content"
        tools:background="@color/color_99">
        <com.changanford.shop.view.shadow.ShadowLayout
            app:xOffset="@dimen/dp_0"
            app:yOffset="@dimen/dp_0"
            app:bgColor="@color/white"
            app:shadowRadius="@dimen/dp_16"
            app:shadowColor="@color/color_55bebebe"
            app:blurRadius="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:background="@drawable/shadow_1b51d9_t_16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/sp_14"
                android:id="@+id/tvGoodsItemTitle"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:text="@{model.title}"
                tools:text="@string/str_text"
                android:textColor="@color/color_33"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingStart="@dimen/dp_8"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12"
                android:text="1200积分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/pb_task"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    tools:progress="10"
                    android:progress="0"
                    android:progressDrawable="@drawable/progressbar_bg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_4"/>
                <TextView
                    android:textColor="@color/color_99"
                    android:layout_marginStart="@dimen/dp_5"
                    android:text="@string/str_zeroPercent"
                    tools:text="10%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:paddingStart="@dimen/dp_8"
                android:textColor="@color/color_99"
                android:text="@string/str_limitedXa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.changanford.shop.view.shadow.ShadowLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:background="@drawable/shadow_55black_1dp"
            android:paddingEnd="@dimen/dp_3"
            android:paddingStart="@dimen/dp_3"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:text="@string/str_ongoing"
            android:layout_margin="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>