<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.changanford.shop.bean.GoodsBean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_145"
        android:layout_height="wrap_content"
        tools:background="@color/color_99">
        <com.changanford.shop.view.shadow.ShadowLayout
            app:xOffset="@dimen/dp_0"
            app:yOffset="@dimen/dp_5"
            app:bgColor="@color/white"
            app:shadowRadius="@dimen/dp_5"
            app:shadowColor="#122D384C"
            app:blurRadius="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_135"
                android:background="@drawable/shadow_1b51d9_t_5dp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.changanford.shop.view.TypefaceTextView
                android:textSize="@dimen/sp_14"
                android:id="@+id/tvGoodsItemTitle"
                android:paddingStart="@dimen/dp_11"
                android:paddingEnd="@dimen/dp_11"
                android:text="@{model.title}"
                tools:text="@string/str_text"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_11"
                android:layout_marginStart="@dimen/dp_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.changanford.shop.view.TypefaceTextView
                    android:id="@+id/tv_integral"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    tools:text="1200积分"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.changanford.shop.view.TypefaceTextView
                    android:id="@+id/tv_orIntegral"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1600"
                    android:textColor="@color/color_BDC7D2"
                    android:textSize="@dimen/sp_10" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/pb_task"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    tools:progress="10"
                    android:progress="0"
                    android:progressDrawable="@drawable/progressbar_bg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_6"/>
                <com.changanford.shop.view.TypefaceTextView
                    android:textColor="@color/color_74889D"
                    android:layout_marginStart="@dimen/dp_4"
                    android:textSize="@dimen/sp_9"
                    android:text="@string/str_zeroPercent"
                    tools:text="10%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.changanford.shop.view.TypefaceTextView
                android:textSize="@dimen/sp_11"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginBottom="@dimen/dp_11"
                android:paddingStart="@dimen/dp_11"
                app:start_txt="@string/str_limited"
                app:end_txt="@string/str_a"
                android:textColor="@color/color_74889D"
                tools:text="@string/str_limitedXa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.changanford.shop.view.shadow.ShadowLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center"
            android:background="@drawable/shadow_33black_2dp"
            android:paddingEnd="@dimen/dp_3"
            android:paddingStart="@dimen/dp_3"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:text="@string/str_ongoing"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_21"
            android:minWidth="@dimen/dp_48"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>