<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.changanford.common.bean.CommentBean" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_F4"
        android:paddingBottom="@dimen/dp_10">
        <com.changanford.shop.view.TopBar
            android:id="@+id/topBar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text="@string/str_eval"
            app:bg_color="@color/white"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            tools:listitem="@layout/item_post_evaluation"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <com.changanford.shop.view.btn.BtnView
            android:enabled="true"
            android:id="@+id/btn_submit"
            android:layout_margin="@dimen/dp_20"
            style="@style/style_btn"
            android:text="@string/str_postEvaluation" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>