<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.changanford.common.bean.OrderItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_goodsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_goods_cover"
            android:layout_width="@dimen/dp_98"
            android:layout_height="@dimen/dp_98"
            android:scaleType="centerCrop"
            android:src="@mipmap/image_h_one_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/rounded5ImageStyle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tv_orderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/img_goods_cover"
            app:layout_constraintTop_toTopOf="@id/img_goods_cover" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_goods_title"
            style="@style/style_txt_ellipsize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@{model.spuName}"
            android:textColor="@color/color_d916"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_goods_cover"
            app:layout_constraintTop_toTopOf="@id/img_goods_cover"
            tools:text="无线蓝牙耳机 降噪耳机全新苹噪机 降噪耳机全新苹噪耳机 降噪耳机全新苹噪耳" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center"
            android:text="@{model.buyNum}"
            android:textColor="@color/color_8016"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_goods_title"
            app:start_txt="@string/str_x"
            tools:text="×2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toStartOf="@id/tv_goods_number"
            app:layout_constraintStart_toStartOf="@id/tv_goods_title"
            app:layout_constraintTop_toBottomOf="@id/tv_goods_title"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_attribute" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="@color/color_4d16"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_integral"
            app:layout_constraintLeft_toLeftOf="@+id/recyclerView"
            tools:text="原价￥130" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_carInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_74889D"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/tv_goods_title"
            app:layout_constraintTop_toBottomOf="@id/tv_goods_title"
            tools:text="预约时间：2021-09-08  24:12:09"
            tools:visibility="gone" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_d916"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/img_goods_cover"
            app:layout_constraintStart_toStartOf="@id/tv_goods_title"
            app:start_txt="实付价￥"
            tools:text="1200(2000福币)" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sale_handler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bord_80a6_23"
            android:gravity="center"
            android:minWidth="70dp"
            android:minHeight="@dimen/dp_28"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="@dimen/dp_4"
            android:text="申请售后"
            android:textColor="@color/color_d916"
            android:textSize="@dimen/sp_11"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_integral"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_integral"
            tools:visibility="visible" />

        <View
            android:id="@+id/v_line"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:background="@color/color_F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_goods_cover" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>