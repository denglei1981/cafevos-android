            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_imgArr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/item_order_goods_imgs"
                tools:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.changanford.common.ui.view.WTextView
            android:id="@+id/tv_totalNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{model0.totalNum}"
            android:textColor="@color/color_8016"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_goodsInfo"
            app:w_end_txt="@string/str_a"
            app:w_start_txt="@string/str_common"
            tools:visibility="visible" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_combined"
            android:textColor="@color/color_16"
            android:textSize="@dimen/sp_14"
