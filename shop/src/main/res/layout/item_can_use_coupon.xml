<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.changanford.common.bean.GoodsDetailBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/color_F4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_coupon_contain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_whit12_bg"
            app:layout_constraintDimensionRatio="343:112"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_vip_tips"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:scaleType="fitStart"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/head_default" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_goodsCover"
                android:layout_width="@dimen/dp_77"
                android:layout_height="@dimen/dp_77"
                android:layout_marginStart="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/image_h_one_default"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/rounded8ImageStyle" />

            <com.changanford.shop.view.TypefaceTextView
                android:id="@+id/tv_goodsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_16"
                android:layout_marginTop="14dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/con_use"
                app:layout_constraintStart_toEndOf="@id/img_goodsCover"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="无线蓝牙耳机 降噪耳机全新苹果二代机" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_time_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_8016"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/con_use"
                app:layout_constraintStart_toStartOf="@+id/tv_goodsTitle"
                app:layout_constraintTop_toBottomOf="@+id/tv_goodsTitle"
                tools:text="2022-01-02" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_time_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:textColor="@color/color_8016"
                android:textSize="@dimen/sp_10"
                app:layout_constraintEnd_toStartOf="@+id/con_use"
                app:layout_constraintStart_toStartOf="@+id/tv_goodsTitle"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_start"
                tools:text="2022-01-02" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_extends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:padding="4dp"
                android:src="@mipmap/icon_coupon_down"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/con_use"
                app:layout_constraintStart_toStartOf="@+id/tv_goodsTitle"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_use"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_8195c8_end_top_end_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="94:112"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:textColor="@color/color_1700f4"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_tips"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="10000" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tips"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:textColor="@color/color_1700f4"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_use_now"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_money"
                    tools:text="满10000元可用" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_use_now"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_bord_1700f4_23"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/color_1700f4"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tips"
                    tools:text="去使用" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/g_extends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="fl_arrow,ll_tips"
            tools:visibility="visible" />

        <FrameLayout
            android:id="@+id/fl_arrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/con_coupon_contain">

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:background="@color/color_F4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/con_coupon_contain" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:src="@mipmap/icon_coupon_up_arrow" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_4_coupon_extends"
            android:orientation="vertical"
            android:paddingBottom="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_arrow">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_extends_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:lineSpacingExtra="5dp"
                android:textSize="12sp"
                android:textColor="@color/color_8016"
                tools:text="券类型：商城券\n领取条件：仅限满5年认证车主领取\n使用限制：不限品类\n券编号 999999999" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>