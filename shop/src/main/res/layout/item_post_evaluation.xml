<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.changanford.common.bean.OrderItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/white">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_goods_cover"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/image_h_one_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/rounded12ImageStyle" />

        <com.changanford.common.ui.view.WTextView
            android:id="@+id/tv_spuName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="16dp"
            android:text="@{model.spuName}"
            android:textColor="@color/color_d916"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/img_goods_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_goods_cover"
            app:layout_constraintTop_toTopOf="@id/img_goods_cover" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="描述相符"
            android:textColor="@color/color_d916"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/ratingBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ratingBar" />

        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            app:layout_constraintStart_toEndOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/img_goods_cover"
            app:srb_drawableEmpty="@mipmap/shop_order_star_0"
            app:srb_drawableFilled="@mipmap/shop_order_star_1"
            app:srb_minimumStars="1"
            app:srb_rating="5"
            app:srb_numStars="5"
            app:srb_starHeight="24dp"
            app:srb_starPadding="4dp"
            app:srb_starWidth="24dp" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="center"
            android:text=" "
            android:textColor="@color/color_1700f4"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/ratingBar"
            app:layout_constraintStart_toEndOf="@id/ratingBar"
            app:layout_constraintTop_toTopOf="@id/ratingBar"
            tools:text="5.0好评" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_081700f4_12"
            android:gravity="start|top"
            android:hint="@string/str_pleaseEnterComments"
            android:maxLength="500"
            android:padding="@dimen/dp_16"
            android:textColor="@color/color_d916"
            android:textColorHint="@color/color_4d16"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/tv_score"
            tools:layout_editor_absoluteX="20dp" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_contentLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_12"
            android:textColor="@color/color_4d16"
            android:textSize="@dimen/sp_10"
            app:end_txt="@string/str_xeb"
            app:layout_constraintBottom_toBottomOf="@id/edt_content"
            app:layout_constraintEnd_toEndOf="@id/edt_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/edt_content"
            app:spanCount="4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_F4"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>