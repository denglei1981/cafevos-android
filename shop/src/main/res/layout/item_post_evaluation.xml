<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.changanford.common.bean.OrderItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:minHeight="@dimen/dp_350"
        android:paddingTop="@dimen/dp_16"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_16">

        <com.google.android.material.imageview.ShapeableImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/img_goods_cover"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:src="@mipmap/image_h_one_default"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/rounded5ImageStyle"/>
        <com.changanford.common.ui.view.WTextView
            android:id="@+id/tv_spuName"
            app:layout_constraintStart_toEndOf="@id/img_goods_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_goods_cover"
            app:layout_constraintBottom_toBottomOf="@id/img_goods_cover"
            android:text="@{model.spuName}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"/>
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@id/ratingBar"
            app:layout_constraintBottom_toBottomOf="@id/ratingBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_score"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_15" />
        <com.changanford.shop.view.ratingbar.AndRatingBar
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintStart_toEndOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/img_goods_cover"
            android:id="@+id/ratingBar"
            android:isIndicator="false"
            style="@style/AndRatingBarStyle"
            android:minHeight="@dimen/dp_24"
            app:bgDrawable="@mipmap/shop_order_star_0"
            app:starDrawable="@mipmap/shop_order_star_1"
            app:starSpacing="@dimen/dp_14" />
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_score"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintStart_toEndOf="@id/ratingBar"
            app:layout_constraintTop_toTopOf="@id/ratingBar"
            app:layout_constraintBottom_toBottomOf="@id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5.0好评"
            android:text=" "
            android:textColor="@color/color_00095B"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow_f9_5dp"
            android:gravity="start|top"
            android:hint="@string/str_pleaseEnterComments"
            android:textColorHint="@color/color_99"
            android:maxLength="500"
            android:padding="@dimen/dp_16"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/tv_score"
            tools:layout_editor_absoluteX="20dp" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_contentLength"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="@id/edt_content"
            app:layout_constraintBottom_toBottomOf="@id/edt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13/500"
            app:end_txt="@string/str_xeb"
            android:textColor="@color/color_cc"
            android:textSize="@dimen/sp_10" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/edt_content"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkBox"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/recyclerView"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_colorv6"
            android:text="@string/str_anonymousSubmissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="@dimen/dp_3"
            android:drawableStart="@drawable/cb_order"
            android:gravity="center_vertical"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>