<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="visible"
            android:layout_width="300dp"
            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bord_1a4a_1"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingTop="@dimen/dp_16">
            <com.changanford.common.ui.view.WTextView
                android:id="@+id/tv_name"
                style="@style/w_style_txt_ellipsize"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/str_listName"
                android:textColor="@color/color_16"
                android:textSize="@dimen/sp_16" />
            <com.changanford.common.ui.view.WTextView
                android:id="@+id/tv_more"
                android:paddingStart="@dimen/dp_10"
                android:layout_width="5dp"
                android:drawableEnd="@mipmap/right_99"
                android:layout_height="8dp"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_name"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <View
                android:id="@+id/view_divider"
                android:layout_marginTop="@dimen/dp_12"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                android:background="@color/color_ee"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/dp_0_5"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/view_divider"
                tools:listitem="@layout/item_home_recommend_list2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>