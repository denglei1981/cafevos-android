<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/v_line_bc"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/color_F4"
        app:layout_constraintTop_toBottomOf="@+id/tv_refund_way_tips" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_supply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="20dp"
        android:text="补充说明(选填，200字内)"
        android:textColor="@color/color_16"
        android:textSize="15sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_081700f4_12"
        android:gravity="start|top"
        android:hint="请填写补充说明"
        android:paddingStart="12dp"
        android:maxLength="200"
        android:paddingTop="16dp"
        android:paddingEnd="12dp"
        android:paddingBottom="16dp"
        android:textColor="@color/color_16"
        android:textColorHint="@color/color_4d16"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="上传凭证"
        android:textColor="@color/color_16"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/white"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_refund_way_tips" />

</androidx.appcompat.widget.LinearLayoutCompat>