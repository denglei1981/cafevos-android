<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_goodsImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/in_bottom"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/in_bottom"
            layout="@layout/in_goods_bottom" />

        <include
            android:id="@+id/in_header"
            layout="@layout/topbar_goods_details" />

        <include
            android:id="@+id/in_empty"
            layout="@layout/in_goods_empty"
            tools:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>