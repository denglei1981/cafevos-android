<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.changanford.common.bean.OrderItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_10">
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_orderNo"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:start_txt="@string/str_orderNo"
            android:text="@{model.orderNo}"
            tools:text="订单编号：DD202109110023"
            android:textColor="@color/color_74889D"
            android:textSize="@dimen/sp_12" />
        <com.changanford.shop.view.TypefaceTextView
            android:layout_marginEnd="@dimen/dp_20"
            android:id="@+id/tv_order_states"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="待发货"
            android:text="@{model.orderStatusName}"
            android:textColor="@color/color_00095B"
            android:textSize="@dimen/sp_12" />
        <include
            android:id="@+id/in_goodsInfo"
            android:layout_marginTop="@dimen/dp_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_orderNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/in_item_order_goods"/>
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_total"
            app:layout_constraintTop_toTopOf="@id/tv_totalPrice"
            app:layout_constraintEnd_toStartOf="@id/tv_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_combined"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_14" />
        <com.changanford.shop.view.TypefaceTextView
            android:drawableStart="@mipmap/ic_shop_fb_42"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:id="@+id/tv_totalPrice"
            android:drawablePadding="@dimen/dp_3"
            app:layout_constraintTop_toBottomOf="@id/in_goodsInfo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_00095B"
            android:textSize="@dimen/sp_14" />
        <View
            android:id="@+id/view_divider"
            app:layout_constraintTop_toBottomOf="@id/tv_totalPrice"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ee"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginEnd="@dimen/dp_20"
            style="?android:attr/borderlessButtonStyle"
            tools:visibility="visible"
            android:visibility="invisible"
            android:id="@+id/btn_confirm"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/view_divider"
            android:minWidth="@dimen/dp_80"
            android:background="@drawable/bord_00095b_15dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            tools:text="@string/str_immediatePayment"
            android:textStyle="bold"
            android:textColor="@color/color_00095B"
            android:textSize="@dimen/sp_12" />
        <androidx.appcompat.widget.AppCompatButton
            style="?android:attr/borderlessButtonStyle"
            tools:visibility="visible"
            android:visibility="invisible"
            android:id="@+id/btn_cancel"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="@id/btn_confirm"
            app:layout_constraintEnd_toStartOf="@id/btn_confirm"
            android:minWidth="@dimen/dp_80"
            android:background="@drawable/bord_99_15dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:text="@string/str_cancelOrder"
            android:textStyle="bold"
            android:textColor="@color/picture_color_66"
            android:textSize="@dimen/sp_12" />
        <androidx.appcompat.widget.AppCompatButton
            style="?android:attr/borderlessButtonStyle"
            tools:visibility="visible"
            android:visibility="invisible"
            android:id="@+id/btn_logistics"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="@id/btn_confirm"
            app:layout_constraintEnd_toStartOf="@id/btn_cancel"
            android:minWidth="@dimen/dp_80"
            android:background="@drawable/bord_99_15dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:text="@string/str_lookLogistics"
            android:textStyle="bold"
            android:textColor="@color/picture_color_66"
            android:textSize="@dimen/sp_12" />
        <androidx.appcompat.widget.AppCompatButton
            style="?android:attr/borderlessButtonStyle"
            tools:visibility="visible"
            android:visibility="invisible"
            android:id="@+id/btn_invoice"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="@id/btn_confirm"
            app:layout_constraintEnd_toStartOf="@id/btn_logistics"
            android:minWidth="@dimen/dp_80"
            android:background="@drawable/bord_99_15dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:text="@string/str_applyInvoice"
            android:textStyle="bold"
            android:textColor="@color/picture_color_66"
            android:textSize="@dimen/sp_12" />

        <com.changanford.shop.view.TypefaceTextView
            android:layout_marginStart="@dimen/dp_20"
            android:id="@+id/tv_orderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:gravity="center_vertical"
            android:textColor="@color/color_00095B"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@id/btn_confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_confirm"
            tools:text="请在09月05日 15:09 前支付" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>