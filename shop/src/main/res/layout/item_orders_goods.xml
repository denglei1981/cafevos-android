<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.changanford.common.bean.OrderItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_10">
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_orderNo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:start_txt="@string/str_orderNo"
            android:text="@{model.orderNo}"
            tools:text="订单编号：DD202109110023"
            android:textColor="@color/picture_color_66"
            android:textSize="@dimen/sp_12" />
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_order_states"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="待发货"
            android:text="@{model.orderStatusTxt}"
            android:textColor="@color/color_00095B"
            android:textSize="@dimen/sp_12" />
        <include
            android:id="@+id/in_goodsInfo"
            android:layout_marginTop="@dimen/dp_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_orderNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/in_item_order_goods"/>
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_totleIntegral"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@id/in_goodsInfo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/font_aCombined"
            app:start_txt="@string/str_combined"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_14" />
        <View
            android:id="@+id/view_divider"
            app:layout_constraintTop_toBottomOf="@id/tv_totleIntegral"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ee"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_btn_confirm"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/view_divider"
            android:minWidth="@dimen/dp_80"
            android:background="@drawable/bord_00095b_15dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            tools:text="立即支付"
            android:textStyle="bold"
            android:textColor="@color/color_00095B"
            android:textSize="@dimen/sp_12" />
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_btn_cancel"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@id/tv_btn_confirm"
            app:layout_constraintEnd_toStartOf="@id/tv_btn_confirm"
            android:minWidth="@dimen/dp_80"
            android:background="@drawable/bord_99_15dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            tools:text="取消订单"
            android:textStyle="bold"
            android:textColor="@color/picture_color_66"
            android:textSize="@dimen/sp_12" />

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_orderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/color_00095B"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@id/tv_btn_confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_btn_confirm"
            app:layout_constraintVertical_bias="0.684"
            tools:text="请在09月05日 15:09 前支付" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>