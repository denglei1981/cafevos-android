<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_left_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:text="退款方式"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="退款方式" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_right_tips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:drawablePadding="8dp"
        android:gravity="end|center_vertical"
        android:textColor="@color/gray_999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_left_tips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_left_tips"
        app:layout_constraintTop_toTopOf="@+id/tv_left_tips"
        tools:text="自行寄回" />
</androidx.constraintlayout.widget.ConstraintLayout>