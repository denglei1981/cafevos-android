<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:background="@drawable/line_eb6067_f89b82"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
       <ImageView
           android:id="@+id/img_logoKill"
           android:background="@color/white"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="@dimen/dp_33"
           android:layout_height="@dimen/dp_33"/>
        <TextView
            android:id="@+id/tv_goods_integral"
            android:layout_marginStart="@dimen/dp_8"
            app:layout_constraintStart_toEndOf="@id/img_logoKill"
            app:layout_constraintTop_toTopOf="@id/img_logoKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1300积分"
            android:textColor="@color/color_withe"
            android:textSize="@dimen/sp_18" />
        <TextView
            android:layout_marginStart="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@id/tv_goods_integral"
            app:layout_constraintStart_toEndOf="@id/tv_goods_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1600积分"
            android:textColor="@color/color_F9E4E6"
            android:textSize="@dimen/sp_10" />
        <TextView
            app:layout_constraintStart_toStartOf="@id/tv_goods_integral"
            app:layout_constraintBottom_toBottomOf="@id/img_logoKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="限量20件"
            android:textColor="@color/color_withe"
            android:textSize="@dimen/sp_10" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>