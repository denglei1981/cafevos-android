<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.changanford.common.bean.GoodsDetailBean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_20">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_goodsCover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/image_h_one_default"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            app:shapeAppearanceOverlay="@style/rounded5ImageStyle"/>
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_goodsTitle"
            style="@style/style_txt_ellipsize"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/img_goodsCover"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.spuName}"
            tools:text="无线蓝牙耳机 降噪耳机全新苹…"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_14" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_goods_property"
            android:layout_marginTop="@dimen/dp_9"
            app:layout_constraintTop_toBottomOf="@id/tv_goodsTitle"
            app:layout_constraintStart_toStartOf="@id/tv_goodsTitle"
            app:layout_constraintEnd_toStartOf="@id/tv_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_attribute" />
        <com.changanford.common.ui.view.WTextView
            android:id="@+id/tv_number"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@id/rv_goods_property"
            app:layout_constraintBottom_toBottomOf="@id/rv_goods_property"
            app:layout_constraintStart_toEndOf="@id/rv_goods_property"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="×1"
            android:textColor="@color/color_74889D"
            android:textSize="@dimen/sp_12"/>
        <com.changanford.shop.view.TypefaceTextView
            android:layout_marginBottom="@dimen/dp_3"
            android:id="@+id/tv_rmbPrice"
            app:end_txt="@string/str_left_parentheses"
            app:layout_constraintStart_toStartOf="@id/tv_goodsTitle"
            app:layout_constraintBottom_toBottomOf="@id/img_goodsCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:start_txt="@string/str_rmb"
            android:text="@{model.rmbPrice}"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_14" />
        <com.changanford.shop.view.TypefaceTextView
            android:layout_marginBottom="@dimen/dp_3"
            android:id="@+id/tv_fbPrice"
            android:drawableStart="@mipmap/ic_shop_fb_42"
            android:drawablePadding="@dimen/dp_2"
            app:layout_constraintTop_toTopOf="@id/tv_rmbPrice"
            app:layout_constraintStart_toEndOf="@id/tv_rmbPrice"
            app:end_txt="@string/str_right_parentheses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.fbPrice}"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_14" />
        <com.changanford.shop.view.AddSubtractView
            android:visibility="gone"
            android:id="@+id/addSubtractView"
            app:layout_constraintBottom_toBottomOf="@id/img_goodsCover"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="@dimen/dp_19"
            app:layout_constraintTop_toBottomOf="@id/img_goodsCover"
            android:id="@+id/view_divider"
            android:background="@color/color_ee"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>