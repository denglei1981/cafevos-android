<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_60"
        android:background="@drawable/bord_ee_b_0d5dp"
        android:layout_marginStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_title"
            android:layout_marginTop="@dimen/dp_13"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="浏览资讯或帖子"
            style="@style/style_txt_ellipsize"
            android:layout_marginEnd="@dimen/dp_100"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_14" />
        <com.changanford.shop.view.TypefaceTextView
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="08-22 13:31"
            android:textColor="@color/color_cc"
            android:textSize="@dimen/sp_12" />
        <com.changanford.shop.view.TypefaceTextView
            android:id="@+id/tv_integralValue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-139"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_15" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>